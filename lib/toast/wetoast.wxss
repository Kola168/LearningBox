/**toast.wxss**/

.wetoast {
  display: none;
}

.wetoast_show {
  display: block;
}

.wetoast__mask {
  position: fixed;
  z-index: 9999999;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.wetoast__bd {
  opacity: 0;
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 5000;
  top: 50%;
  left: 50%;
  padding: 30rpx;
  box-sizing: border-box;
  transform: translate(-50%, -50%);
  background: rgba(40, 40, 40, 0.7);
  border-radius: 10rpx;
  color: #FFFFFF;
  word-wrap: break-word;
  word-break: break-all;
  align-items: center;
  justify-content: space-around;
  min-width: 200rpx;
  max-width: 500rpx;
}


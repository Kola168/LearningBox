page {
  /* padding: 0 24rpx; */
  box-sizing: border-box;
}

.title {
  display: flex;
  color: #666;
  font-size: 30rpx;
  justify-content: space-between;
  margin: 30rpx 24rpx;
}

.line-blod {
  height: 3rpx;
  width: 100%;
  background: #CECECE;
}

.list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin: 40rpx 24rpx; */
}

.left {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}

.number {
  font-size: 20rpx;
  display: flex;
}

.state {
  font-size: 24rpx;
  color: #4FB526;
  width: 20%;
  text-align: right;
}

.orange {
  color:#FE8D77;
}

.yellow {
  color: #FFC35B;
}

.line {
    width: 100%;
    height: 2rpx;
    background: #cecece;
    margin-top: 40rpx;
}
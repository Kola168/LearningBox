.container {
  background: #fff;
  display: flex;
}

.resources-type {
  width: 180rpx;
  background: #F7F7F7;
  font-size: 32rpx;
  color: #333;
}

.type-item {
  width: 180rpx;
  text-align: center;
  height: 52px;
  line-height: 52px;
}

.type-item-active {
  color: #FFA200;
  font-weight: 700;
  background: #fff;
  position: relative;
}

.type-item-active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 8rpx;
  background: #FFA200;
}

.type-content {
  width: calc(100% - 210rpx);
  margin-left:30rpx;
}

.item-title {
  width: 100%;
  height: 40px;
  line-height: 40px;
}

.item-box {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.box-item {
  display: flex;
  flex-direction: column;
  width: calc(33.33% - 30rpx);
  margin-right: 30rpx;
  justify-content: space-between;
}

.item-title {
  font-size: 28rpx;
  color: #666;
}

.item-img {
  width: 100%;
  height: calc(100% - 81rpx);
  border-radius: 8rpx;
  overflow: hidden;
}

.item-img image {
  width: 100%;
}

.text-title {
  font-size: 28rpx;
  color: #333;
  margin: 10rpx 0 6rpx;
}

.text-desc {
  font-size: 20rpx;
  color: #666;
}


::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
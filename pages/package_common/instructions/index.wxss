/* pages/package_common/instructions/index.wxss */
@import "../../../common/icon/icon.wxss";
page{
  width:100%;
  min-height:100%;
  display:flex;
  flex-direction:column;
}
view {
  box-sizing: border-box;
}

.search-box{
  width:700rpx;
  height:60rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  margin:0 auto;
  background:#f4f4f3;
  border-radius:30rpx;
}

.icon-search{
  color:#999;
  font-size:30rpx;
  margin-right:8rpx;
}

.search-tip-text{
  font-size: 24rpx;
  color: #999999;
}

.content-box {
  border-top: 20rpx solid #F7F7F7;
  margin-top: 30rpx;
}

.content-top-type {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx;
}

.content-type-box {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333333;
}

.content-type-name {
  margin-right: 16rpx;
}

.icon-show-more {
  color: #999999;
  font-size: 35rpx;
}

.rest-box{
  flex:1;
  width:100%;
  overflow:auto;
  position:relative;
}

.check-box{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  background:rgba(0,0,0,0.5);
}

.picker-box{
  width:100%;
  max-height:60%;
  overflow:auto;
  background:#fff;
}

.picker-list{
  padding:30rpx 24rpx;
  color:#333;
  font-size:28rpx;
}

.content-list {
  font-size: 28rpx;
  color: #333333;
  padding: 30rpx 24rpx;
  display:flex;
  align-items:center;
  justify-content:space-between;
  border-bottom:1rpx solid #E7E7E7;
}

.content-list:last-child{
  border-bottom:none;
}

.content-list:first-child{
  border-bottom:1rpx solid #E7E7E7;
}

.icon-next{
  font-size:30rpx;
  transition:0.2s;
}

.icon-checked{
  transform:rotate(-180deg)
}

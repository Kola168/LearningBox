/* pages/package_common/instructions/index.wxss */
@import "../../../common/icon/icon.wxss";

view {
  box-sizing: border-box;
}

.search-box{
  width:700rpx;
  height:60rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  margin:0 auto;
  background:#f4f4f3;
  border-radius:30rpx;
}

.icon-search{
  color:#999;
  font-size:30rpx;
  margin-right:8rpx;
}

.search-tip-text{
  font-size: 24rpx;
  color: #999999;
}

.content-box {
  border-top: 20rpx solid #F7F7F7;
  margin-top: 30rpx;
}

.content-top-type {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx;
}

.content-type-box {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333333;
}

.content-type-name {
  margin-right: 16rpx;
}

.icon-show-more {
  color: #999999;
  font-size: 35rpx;
}

.content-list {
  font-size: 28rpx;
  color: #333333;
  padding: 30rpx 24rpx;
  display:flex;
  align-items:center;
  justify-content:space-between;
  border-bottom:1rpx solid #E7E7E7;
}

.content-list:last-child{
  border-bottom:none;
}

.content-list:first-child{
  border-bottom:1rpx solid #E7E7E7;
}

/* pages/package_common/common_content/index.wxss */
page {
    width: 100%;
    padding: 24rpx;
    box-sizing: border-box;
}

.title {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: 0;
    margin-bottom: 40rpx;
}

.content-wrap {
    width: 100%;
    margin-bottom: 20rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #333333;
    letter-spacing: 0;
}

.content-item {
    width: calc((100% - 60rpx) / 3);
    border-radius: 20rpx;
    text-align: center;
    margin-bottom: 30rpx;
}

.content-item view{
    color: #333;
    margin-top: 42rpx;
    font-size: 28rpx;
    width: 200rpx;
    margin: 0;
    margin: 0 auto;
    text-align: left;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.content-item image {
    width: 100%;
    margin-bottom: 14rpx;
    border-radius: 20rpx;
}

.plan-item {
    display: flex;

}

.plan-item image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    margin-right: 24rpx;
}

.color-red {
    color: red
}

.plan-right {
    width: calc(100% - 224rpx);
    height:200rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    letter-spacing: 0;
    position: relative;
    margin-bottom: 50rpx;
}

.plan-title {
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #333333;
    letter-spacing: -0.82rpx;
}

.play-sort {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    letter-spacing: 0;
}

.button-subscription {
    position: absolute;
    bottom:0;
    right:0;
    display: inline-block;
    color: #333333;
    padding: 10rpx 45rpx;
    border-radius: 30rpx;
    background: #FFDC5E;
}
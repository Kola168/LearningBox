            <view class="grade">{{kidInfo.stage.name?kidInfo.stage.name:'未填写'}}</view>
        </view>
    </view>
    <image src="../../images/doc_item_arrow.png" mode="widthFix" class="after"></image>
</view>
<image class="member"></image>
<view class="content"></view>

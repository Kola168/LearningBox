/* pages/account/index.wxss */
page {
    width: 100%;
    padding: 24rpx;
    box-sizing: border-box;
}

.user-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
}

.user-info view {
    display: flex;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.name {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: -0.62px;
}

.info {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.grade {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    letter-spacing: -0.42px;
    margin-top: 8rpx;
}

.after {
    width: 12rpx;
    height: 12rpx;
    margin-right: 20.8rpx;
}

.after-tip {
    width: 160rpx;
    height: 40rpx;
}

.member {
    width: 100%;
    height: 100rpx;
}

.no-device,
.has-device {
    display: flex;
    align-items: center;
    height: 120rpx;
    background: #FFFFFF;
    box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.30);
    border-radius: 20rpx;
    margin-top: 40rpx;
}

.no-device {
    width: 100%;
    justify-content: center;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 0;
    text-align: center;
}

.no-device image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 12rpx;
}

.info-status,
.info-main,
.device-img,
.device-info{
    display: flex;
}

.device-info,
.device-img,
.info-status {
    align-items: center;
}

.has-device {
    padding: 0 20rpx;
    height: 120rpx;
}

.device-info {
    justify-content: space-between;
    width: calc(100% - 112rpx);
    margin-left: 20rpx;
}

.info-main {
    flex-direction: column;
    width: calc(100% - 28rpx);
}

.device-img {
    width: 88rpx;
    height: 88rpx;
    background: #F9F9FB;
    border-radius: 50%;
}

.device-img image {
    width: 60%;
    margin: 0 auto;
}

.info-name {
    color: #333;
    font-weight: bold;
    font-size: 28rpx;
}

.info-status {
    font-size: 24rpx;
    margin-top: 8rpx;
    color: #999;
}

.info-status-active {
    color: #4FB526;
}

.status-flag {
    width: 8rpx;
    height: 8rpx;
    background: #999;
    border-radius: 4rpx;
    margin-right: 8rpx;
}

.online-status {
    background: #4FB526;
}

.info-arrow {
    width: 14rpx;
    height: 22rpx;
}


.content-wrap {
    width: 100%;
    box-sizing: border-box;
    margin-top: 30rpx;
    padding: 24rpx 24rpx 30rpx;
    width: 100%;
    background: #FFFFFF;
    box-shadow: 0 4rpx 16rpx 0 rgba(124, 204, 204, 0.30);
    border-radius: 20rpx;
}

.content-wrap .title {
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    color: #333333;
    letter-spacing: -0.56px;
}

.content-wrap image {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 6rpx;
}

.content-wrap .content {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #333333;
    letter-spacing: -0.42px;
    margin-top: 28rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.content-wrap .content-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.phone-number,
.article {
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #D6D6D6;
    letter-spacing: -0.42px;
    margin-top: 50rpx;
    text-align: center;
}

.article {
    margin-top: 16rpx;
    margin-bottom: 6rpx;
}
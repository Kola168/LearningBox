/* pages/account/index.wxss */
page {
    width: 100%;
    padding: 24rpx;
    box-sizing: border-box;
}

.user-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
}

.user-info view {
    display: flex;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.name {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: -0.62px;
}

.info {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.grade {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    letter-spacing: -0.42px;
    margin-top: 8rpx;
}

.after {
    width: 12rpx;
    height: 12rpx;
    margin-right: 20.8rpx;
}

.after-tip {
    width: 160rpx;
    height: 40rpx;
}

.member {
    width: 100%;
    height: 100rpx;
}

.no-device {
    width: 100%;
    height: 120rpx;
    background: #FFFFFF;
    box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.30);
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 0;
    text-align: center;
    margin-top: 40rpx;
}

.no-device image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 12rpx;
}

.content-wrap {
    width: 100%;
    box-sizing: border-box;
    margin-top: 30rpx;
    padding: 24rpx 24rpx 30rpx;
    width: 100%;
    background: #FFFFFF;
    box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.30);
    border-radius: 20rpx;
}

.content-wrap .title {
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    color: #333333;
    letter-spacing: -0.56px;
}

.content-wrap image {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 6rpx;
}

.content-wrap .content {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #333333;
    letter-spacing: -0.42px;
    margin-top: 28rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.content-wrap .content-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.phone-number,
.article {
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #D6D6D6;
    letter-spacing: -0.42px;
    margin-top: 50rpx;
    text-align: center;
}

.article {
    margin-top: 16rpx;
    margin-bottom: 6rpx;
}
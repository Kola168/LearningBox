/* pages/package_feature/print_name/edit.wxss */
page{
  width:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  box-sizing:border-box;
}

.top-tips{
  display:flex;
  font-size:24rpx;
  color:#666;
  margin:60rpx 0;
}

.top-tip-icon{
  width:36rpx;
  margin-right:10rpx;
}

.edit-box{
  width:600rpx;
  position:relative;
}

.no-edit-mode{
  width:100%;
}

.edit-cover-mode{
  width:100%;
}

.input-box{
  flex:1;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}

.input-item-box{
  width:400rpx;
  display:flex;
  align-items:center;
  margin-bottom:60rpx;
}

.input-item-key{
  font-size:32rpx;
  color:#333;
  margin-right:30rpx;
}

.input-item{
  flex:1;
  background: #F8F8F8;
  border: 1px solid #EBEAEA;
  border-radius: 4rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 16rpx;
}


.bottom-box {
  width: 100%;
  display:flex;
  flex-direction:column;
  justify-content:flex-end;
  align-items:center;
}

.button-conf{
  width:100%;
}

.template-list-box {
  width: 100%;
  white-space: nowrap;
  padding: 0 12rpx;
  box-sizing: border-box;
  margin-bottom:20rpx;
}

.template-limit-height{
  height:120rpx;
  display:flex;
  align-items:center;
  flex-wrap:nowrap;
}

.template-item-box {
  margin: 0 10rpx;
  display: inline-block;
}

.template-name {
  font-size: 32rpx;
  color: #999999;
}

.template-type-selected {
  font-size: 32rpx;
  color: #333333;
}

.template-preview-img{
  width:200rpx;
}

.template-vertical-img{
  width:120rpx;
}

.template-item-selected{
  border: 3px solid #FFDC5E;
}

/* pages/photo/index.wxss */
page {
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  /* box-shadow:inset 0 4rpx 2rpx -2rpx rgba(0,0,0,0.25) */
}

.item {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 36rpx;
  color: #333;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.50);
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  /* border-bottom: 2rpx solid #cecece; */
}

.content {
  display: flex;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #454545;
  letter-spacing: -0.68rpx;
}

.foreign .icon {
  width: 86rpx;
  height: 52rpx;
}

.icon {
  width: 62rpx;
  height: 62rpx;
  margin-right: 22rpx;
}

.size {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #A5A5A5;
  letter-spacing: -0.68rpx;
  text-align: center;
  margin-left: 30rpx;
}

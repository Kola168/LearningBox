/* pages/package_feature/print_ calendar/edit.wxss */
page {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top-check-box {
  width: 410rpx;
  height: 66rpx;
  margin-top: 26rpx;
  display: flex;
  justify-content: space-between;
}

.check-item {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #666666;
}

.check-item-checked {
  color: #FFA200;
}

.line {
  width: 28rpx;
  height: 4rpx;
  background: #FFA200;
}

.tips-box {
  font-size: 24rpx;
  color: #666666;
  display: flex;
  align-items: center;
  margin-top: 28rpx;
}

.tips-icon {
  width: 36rpx;
  margin-right: 10rpx;
}

.edit-box {
  position: relative;
  box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.40);
  display: flex;
  margin-top: 60rpx;
}

.edit-bg-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.bottom-box {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}

.template-list-box {
  width: 100%;
  white-space: nowrap;
  padding: 0 12rpx;
  box-sizing: border-box;
  margin-bottom:20rpx;
}

.template-limit-height{
  height:172rpx;
  display:flex;
  align-items:center;
  flex-wrap:nowrap;
}

.template-item-box {
  margin: 0 10rpx;
  display: inline-block;
}

.template-name {
  font-size: 32rpx;
  color: #999999;
}

.template-type-selected {
  font-size: 32rpx;
  color: #333333;
}

.template-preview-img{
  width:200rpx;
}

.template-vertical-img{
  width:120rpx;
}

.template-item-selected{
  border: 3px solid #FFDC5E;
}

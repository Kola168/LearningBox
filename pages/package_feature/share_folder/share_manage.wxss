.share-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    padding-bottom: 100rpx;
}

.top {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 26rpx 0;
}

.text-share {
    color: #333;
    font-size: 36rpx;
}

.text-share-num {
    font-size: 14px;
    color: #999999;
}

.text-select {
    color: #FFC35B;
    font-size: 30rpx;
}

.btn-stop {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #FFE27A;
    color: #000;
    font-size: 36rpx;
}

.btn-stop:not([size='mini']) {
    font-weight: 400;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding:0
}


.btn::after {
    border: none;
}

.member-list {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 90%;
    padding: 0 5%;
}

.member-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    /* border-bottom: 2rpx solid #cecece; */
    padding-top: 66rpx;
}

.user-info {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.user-info image {
    width: 100rpx;
    border-radius: 50rpx;
}

.user-info text {
    width: 130rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
}

.select-image {
    width: 40rpx;
}

.modal-wrap {
    width: 100%;
    height: 100%;
    /* padding: 60rpx; */
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.modify-box {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 80%;
    padding-top: 60rpx;
    position: absolute;
    z-index: 999999;
    background: #fff;
    border-radius: 10rpx;
}

.title {
    width: 100%;
    text-align: center;
    color: #333333;
    font-size: 36rpx;
}

.section-input {
    width: 454rpx;
    height: 68rpx;
    /* border: 4rpx solid #999999; */
    background: #F8F8F8;
    margin-top: 40rpx;
}

.input {
    width: 100%;
    height: 68rpx;
    line-height: 68rpx;
    background: #F8F8F8;
    text-align: center;
    font-size: 28rpx;
}

.content {
    width: 100%;
    color: #ff9a87;
    margin-top: 20rpx;
    text-align: center;
    font-size: 20rpx;
}


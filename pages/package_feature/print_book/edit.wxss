/* pages/package_feature/print_book/edit.wxss */
page{
  width:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
}

.top-tips{
  display:flex;
  align-items:flex-end;
  font-size:24rpx;
  color:#666;
  flex:1;
  margin-bottom:40rpx;
}

.edit-mode-bg{
  position:relative;
  box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.40);
  display:flex;
}

.top-tip-icon{
  width:36rpx;
  margin-right:10rpx;
}

.edit-bg-img{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  z-index:-1;
}

.bottom-box{
  width:100%;
  position:absolute;
  bottom:0;
  left:0;
}

.template-list-box{
  width:100%;
  white-space: nowrap;
  padding:0 12rpx;
  box-sizing:border-box;
}

.template-item{
  width:120rpx;
  height:120rpx;
  display:inline-block;
  margin:40rpx 12rpx;
  position:relative;
}

.template-img{
  width:100%;
  height:100%;
}

.img-selected{
  border: 4rpx solid #ffdc5e;
}

.border-img{
  width:45rpx;
  height:auto;
}

.bottom-station{
  flex:3;
}

.template-delete-icon{
  width:30rpx;
  position:absolute;
  top:-14rpx;
  right:-15rpx;
}

/* pages/print_id/sort.wxss */

page {
    width: 100%;
    height: 100%;
    padding: 24rpx;
    box-sizing: border-box;
    font-family: PingFangSC-Medium;
}

.title {
    font-size: 30rpx;
    color: #454545;
    letter-spacing: -0.86rpx;
    font-family: PingFangSC-Medium;
}

.zhineng {
    font-family: PingFangSC-Regular;
    /* color: #fff; */
    padding: 20rpx 100rpx 30rpx;
    font-size: 24rpx;
    width: 100%;
    display: flex;
    color: #999;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    border-radius: 12rpx;
    margin-top: 24rpx;
    margin-bottom: 40rpx;
    background: #fff;
    box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.5);
    box-sizing: border-box;
}

.title text {
    font-size: 24rpx;
    color: #999;
    margin-left: 18rpx;
    letter-spacing: 0.5rpx;
}

.zhineng view {
    text-align: center;
}

.zhineng .title {
    font-size: 36rpx;
    color: #333;
    letter-spacing: -0.86rpx;
    font-family: PingFangSC-Medium;
    margin: 24.84rpx 0 10rpx 0;
}

.zhineng image {
    width: 100%;
    height: 308rpx;
}

.zhineng-button {
    display: flex;
    width: 296rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #FFE27A;
    border-radius: 38rpx;
    color: #333;
    justify-content: center;
    margin: 0 auto;
    margin-top: 30rpx;
}

.zhineng-button image {
    width: 14rpx;
    height: 10.5rpx;
    margin: 0;
    margin-top: 22rpx;
    margin-left: 8rpx;
}

.hot {
    margin-bottom: 60rpx;
}

.inch-1,
.inch-2-mini,
.inch-2,
.hot-content>view {
    width: 33%;
}

.inch-1 image {
    width: 82rpx;
    height: 110rpx;
}

.inch-2-mini image {
    width: 102rpx;
    height: 128rpx;
}

.inch-2 image {
    width: 102rpx;
    height: 138rpx;
}

.hot-image,
.hot-content {
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: flex-end;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    letter-spacing: -0.58rpx;
    text-align: center;
}

.hot-title {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 0;
}

.kind {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 24rpx;
}

.kind>view {
    width: 48.5%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    letter-spacing: -0.58rpx;
    background: #fff;
    border-radius: 16rpx;
    padding: 60rpx 20rpx;
    box-sizing: border-box;
    box-shadow: 0 2px 8px 0 rgba(204, 204, 204, 0.50);
}

.kind>view view {
    text-align: center;
}

.kind-title {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 0;
    margin-bottom: 10rpx;
}

.kind image {
    height: 100rpx;
    width: 84rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
}

.consumables-icon {
  width: 100rpx;
  height: 104rpx;
  position: fixed;
  bottom: 200rpx;
  right: 50rpx;
  z-index: 10000;
}
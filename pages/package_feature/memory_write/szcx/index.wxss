.item-main {
  flex-wrap: wrap;
  color: #333;
  font-size: 30rpx;
  padding-top: 30rpx;
}

.item-main>view {
  width: 20%;
  text-align: center;
  margin-bottom: 30rpx;
}

.box-item {
  padding: 40rpx 30rpx;
}

.box-item:not(:last-child) {
  border-bottom: 1px solid #CECECE;
}

.box-item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #454545;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.box-item-count {
  font-size: 24rpx;
  color: #666;
}


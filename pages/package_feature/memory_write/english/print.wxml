<nav-bar title="英语默写"></nav-bar>
<view class="img-wrap">
  <swiper current="{{currentImgIndex}}" bindchange="tabSlide" circular="{{false}}" class="swiper-wrap">
    <swiper-item class='img-box' wx:for="{{images}}" wx:key="{{index}}">
      <image src="{{item}}?x-image-process=image/resize,w_400" mode="widthFix"></image>
    </swiper-item>
  </swiper>
  <view class="img-ctrl flex align-center">
    <image class="img-prew" src="/images/preview-turn-left.png" bindtap="turnImg" data-turn='prev' />
    <view class="img-index">{{currentImgIndex+1}}/{{images.length}}</view>
    <image class="img-next" src="/images/preview-turn-right.png" bindtap="turnImg" data-turn="next" />
  </view>
</view>
<view class="handle-print flex">
  <view class="templates-wrap">
    <view class="templates flex">
      <view class="template-box flex align-center {{currentTemplateType==item?'template-box-active':''}}" id="{{item}}" wx:for="{{templateTypes}}" wx:key="{{index}}" bindtap="templateChoose">
        <image src="https://cdn-h.gongfudou.com/LearningBox/feature/english_template_{{index+1}}.png" mode="widthFix" />
      </view>
    </view>
  </view>
  <view class="print-count flex">
    <view>打印份数</view>
    <view class="count-handle flex align-center">
      <image src="../../../images/decrease_{{printCount===1?'gray':'yellow'}}.png" id="decrease" bindtap="handlePrintCount" mode="widthFix" />
      <view>{{printCount}}</view>
      <image src="../../../images/increase_{{printCount>=30?'gray':'yellow'}}.png" id="increase" bindtap="handlePrintCount" mode="widthFix" />
    </view>
  </view>
  <view class="print-bar">
    <view wx:if="{{savable}}" bindtap="saveImg">
      <image src="/images/save_img.png"></image>
      <view>保存</view>
    </view>
    <view wx:if="{{!savable}}">
      <button open-type="openSetting" bindopensetting="allowSave">
        <image src="/images/save_img.png"></image>
        <view>保存</view>
      </button>
    </view>
    <view class="confirm-print">
      <form report-submit="true" bindsubmit="showConfirmMdal">
        <button open-type="{{hasAuthPhoneNum?'':'getPhoneNumber'}}" bindgetphonenumber="{{hasAuthPhoneNum?'':'getPhoneNumber'}}" formType="submit">
          确认打印
        </button>
      </form>
    </view>
  </view>
</view>
<confirm-print bindconfirm="print" modal="{{confirmModal}}"></confirm-print>


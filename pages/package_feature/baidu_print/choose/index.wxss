.flex {
  display: flex;
}

.display-search {
  height: 60rpx;
  background: #EAEAEA;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #999;
  align-items: center;
  font-size: 12px;
  margin: 20rpx 24rpx;
}

.display-search image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 40rpx;
  margin-right: 15rpx;
}

.files-box {
  padding-bottom: 180rpx;
}

.file-item {
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 2rpx solid #e7e7e7;
  position: relative;
}

.forbid-bg {
  background: #f9f9f9;
}

.item-info {
  width: 91%
}

.info-img-box {
  width: 80rpx;
}

.item-info image {
  width: 100%;
  height: 100%;
}

.info-main {
  flex-direction: column;
  justify-content: center;
  padding-left: 24rpx;
  width: 82%;
}

.main-name {
  color: #333333;
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.main-time {
  color: #999;
  font-size: 24rpx;
}

.item-check {
  width: 9%;
  justify-content: center;
  align-items: center;
}

.item-check image {
  width: 32rpx;
  height: 32rpx;
}

.file-tip {
  position: absolute;
  top: 0;
  right: 0;
  width: 92rpx;
  height: 92rpx;
}

.confirm-btn {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #EAEAEA;
  color: #a5a5a5;
  font-size: 36rpx;
  font-weight: bold;
}

.confirm-btn-active {
  background: #FFDC5E;
  color: #454545;
}
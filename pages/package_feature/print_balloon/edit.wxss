/* pages/package_feature/print_balloon/edit.wxss */
page{
  width:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
}

.top-tips{
  display:flex;
  align-items:center;
  margin-top:28rpx;
  font-size:24rpx;
  color:#666;
}

.edit-mode-bg{
  margin-top:32rpx;
  position:relative;
  box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.40);
}

.edit-mode{
}

.top-tip-icon{
  width:36rpx;
  margin-right:10rpx;
}

.edit-bg-img{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  z-index:-1;
}

.bottom-box{
  width:100%;
  position:absolute;
  bottom:0;
  left:0;
}

.template-list-box{
  width:100%;
  white-space: nowrap;
  padding:0 20rpx;
  box-sizing:border-box;
}

.template-item{
  display:inline-block;
  box-sizing:border-box;
  margin:26rpx 20rpx;
  box-shadow: 1px 2px 6px 0 #CCCCCC;
}

.template-img{
  width:120rpx;
}

.img-selected{
  border: 8rpx solid #FFDC5E;
}

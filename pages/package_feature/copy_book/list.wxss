page {
    padding: 30rpx;
    overflow-y: scroll;
    box-sizing: border-box;
    overflow-x: hidden;
    width: 100%;
}

.list {
    display: flex;
    /* align-items: center; */
    margin-bottom: 40rpx;
    overflow-x: hidden;
    /* width: 100%； */
}

.url {
    width: 200rpx;
    /* height: 270rpx; */
    margin-right: 26rpx;
}

.title {
    display: flex;
    margin: 26rpx 0 20rpx;
    font-size: 32rpx;
    position: relative;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.free {
    font-size: 18rpx;
    width: 54rpx;
    height: 30rpx;
    background: #FE8C76;
    color: #fff;
    border-radius: 20rpx 20rpx 20rpx 0;
    text-align: center;
    line-height: 30rpx;
    position: absolute;
    right: -65rpx;
    top: -5rpx;
}

.content {
    color: #7C7C7C;
    font-size: 24rpx;
    width: 380rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.practice {
    width: 80rpx;
    height: 32rpx;
    border: 2rpx solid #83CB66;
    border-radius: 10rpx;
    color: #83CB66;
    font-size: 20rpx;
    text-align: center;
    line-height: 32rpx;
    position: absolute;
    bottom: 12rpx;
}

.bottom-nopay {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    background: #FFE27A;
    box-sizing: border-box;
    margin-left: -30rpx;
    font-size: 36rpx;
}

.bottom-pay {
    position: fixed;
    bottom: 0;
    width: 100%;
    /* height: 80rpx; */
    text-align: center;
    /* line-height: 80rpx; */
    background: #FFF6D8;
    box-sizing: border-box;
    margin-left: -30rpx;
    color: #FFBD30;
    font-size: 24rpx;
    /* padding-bottom:50rpx; */
    padding: 30rpx 0;
}

.high-screen-bottom {
    padding: 30rpx 0 60rpx 0;
}


/* 弹窗样式 */

.modal-wrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
}

.confirm-modal {
    width: 620rpx;
    background: #fff;
    color: #333;
    font-size: 36rpx;
    border-radius: 20rpx;
    padding-top: 40rpx;
    text-align: center;
}

.confirm-modal-content {
    font-size: 28rpx;
    margin-top: 40rpx;
    margin-bottom: 60rpx;
}

.cancel {
    width: 50%;
    color: #666;
    font-size: 36rpx;
    border-top: 2rpx solid #CECECE;
}

.confirm {
    width: 50%;
    background: #ffe27a;
    color: #666;
    font-size: 36rpx;
    border-radius: 0 0 20rpx;
}
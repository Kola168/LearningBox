<nav-bar title="字帖"></nav-bar>

<view class='top'>
  <view class='top-left'>
    <text>我的练习</text>
    <button class='top-share' bindtap='toShare' hover-class='none'>
      <image src='../resource_images/share_gray.png' mode='widthFix'></image>
      <view>晒成果</view>
    </button>
  </view>
</view>

<view class='number'>
  <view class='num'>
    <view style='display:flex;align-items:center'>
      <view>{{word_count}}</view>
      <text style='font-size:30rpx' wx:if="{{word_count>99999}}">万</text>
    </view>
    <view class='gray'>累计练习/字</view>
  </view>
  <view class='num'>
    <view style='display:flex;align-items:center'>
      <view>{{day_count}}</view>
      <text style='font-size:30rpx' wx:if="{{day_count>99999}}">万</text>
    </view>
    <view class='gray'>累计练字/天</view>
  </view>
  <view class='num'>
    <view style='display:flex;align-items:center'>
      <view>{{print_count}}</view>
      <text style='font-size:30rpx' wx:if="{{print_count>99999}}">万</text>
    </view>
    <view class='gray'>累计完成/篇</view>
  </view>
</view>
<view class='line'></view>
<view class="content" wx:if="{{!iosModal}}">
  <textarea placeholder="自由输入汉字，一键生成字帖" class='content-input' bindblur='contentinput' bindinput="contentinput" maxlength='50' placeholder-class='textarea' bindfocus="closeIosTip" />
  <view class='word'>{{num}}/50</view>
</view>
<view class='practice'>
    <view class="practice-font">
        <view class="font-item" bindtap="chooseFont" id="kt">
            <image src="../resource_images/document_{{fontType==='kt'?'':'un'}}checked.png" />
            <view>楷体</view>
        </view>
        <view class="font-item" bindtap="chooseFont" id="lmsxk">
            <image src="../resource_images/document_{{fontType==='lmsxk'?'':'un'}}checked.png" />
            <view>黎明手写楷体</view>
        </view>
    </view>
    <view class="practice-type">
        <view bindtap='toDetail' id='stroke' hidden="{{fontType==='lmsxk'}}">练笔顺</view>
        <view bindtap='toDetail' id='normal'>练字</view>
    </view>
</view>
<view class='line1'></view>
<view class='title'>字帖集</view>
<view class='detail'>
    <view bindtap='toCommonSense'>
        <image src='../resource_images/copybook_common_sense.png' class='url'></image>
        <text>书写基本常识</text>
    </view>
    <view wx:for="{{copybookSets}}" wx:key="copybookSets" id="{{index}}" bindtap='toList'>
        <image src='{{item.icon_url}}' class='url'></image>
        <text>{{item.name}}</text>
    </view>
</view>

<import src="/lib/toast/wetoast.wxml" />
<template is="wetoast" data="{{...__wetoast__}}" />

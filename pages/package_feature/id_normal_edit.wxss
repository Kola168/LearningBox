page{
    position: relative;
    /* box-shadow:inset 0 4rpx 2rpx -2rpx rgba(0,0,0,0.25) */
}
.editor-area {
    overflow: hidden;
    position: absolute;
    background: #fff;
    box-shadow: 0 0 34rpx rgba(177, 176, 181, 0.8);
}

.area {
    width: 100%;
    position: relative;
    z-index: 500;
    transform: translate3d(0, 0, 0);
    margin-top:-60rpx;
}

.user-img {
    top: 0;
    left: 0;
    position: absolute;
    z-index: 400;
    transform: translate3d(0, 0, 0);
    transform-origin:50% 50% 0;
}

.area-canvas {
    position: absolute;
    left: -10000px;
    top: -10000px;
    z-index: 1;
}

.area-border {
    position: absolute;
    z-index: 501;
    border: 4rpx solid #fff175;
}

.change-btn {
    position: absolute;
    z-index: 502;
    background: #fff;
    color: #fae100;
    box-shadow: 0 0 16rpx #999;
    font-size: 26rpx;
    padding: 22rpx;
    text-align: center;
    vertical-align: center;
}

.change-btn image {
    width: 36rpx;
    height: 32rpx;
    margin-right: 22rpx;
    position: absolute;
    top: 17rpx;
    left: 38rpx;
}

.change-btn text {
    margin-left: 52rpx;
}

.bottom-btn {
    width: 100%;
    display: block;
    /* height: 95rpx; */
    position: fixed;
    bottom: 0;
}

.bottom-btn button {
    height: 100rpx;
    padding: 0;
    line-height: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.next {
    text-align: center;
    height: 95rpx;
    line-height: 95rpx;
    display: inline-block;
    color: #333;
    width: 100%;
    position: relative;
    font-size: 34rpx;
}


.btn-print {
    background: #FFE27A;
    color:#000;
    border: none;
    border-radius: 0;
    font-size: 34rpx;
}

.btn-tip {
    position: absolute;
    left: 0;
    bottom:30rpx;
    width: 100%;
    color: #bfbfbf;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    box-sizing: border-box;
    z-index:1000
}

.btn-tip>view {
    height:60rpx;
    padding:0 40rpx;
    border:4rpx dashed #bfbfbf;
    border-radius:60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn-add{
    position: absolute;
    bottom:60rpx;
    left:37%;
    width:26%;
    z-index:1000
}

.size {
    padding-top:60rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #000;
    font-size: 36rpx;
}

.size image{
    width:40rpx;
    height:40rpx;
    margin-right: 10rpx;
}

.editor-bg{
    position: absolute;
    top:0;
    left:0
}
.delete {
    position: absolute;
    top: 0;
    right: 0;
    width:52rpx;
    height: 52rpx;
    z-index: 1000;
  }

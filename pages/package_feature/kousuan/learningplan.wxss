/* pages/package_feature/kousuan/learningplan.wxss */
page {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 140rpx;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
}

.top-tap {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 140rpx;
  left: 0;
  padding: 28rpx 40rpx;
}

.top-tap-style {
  font-size: 32rpx;
  color: #666666;
  position: relative;
}

.type-checked {
  font-size: 34rpx;
  color: #FFA200;
}

.type-checked-line {
  position: absolute;
  width: 34%;
  height: 4rpx;
  border-radius: 2rpx;
  left: 33%;
  background: #FFA200;
  top: 68rpx;
}

.list-box {
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom:160rpx;
}

.list-item {
  width: 100%;
  border-radius: 20rpx;
  box-shadow: 0 2px 8px 0 rgba(204, 204, 204, 0.40);
  padding: 20rpx 20rpx 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.list-finish-item{
  height: 220rpx;
}

.list-msg-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.list-cont-box {
  display: flex;
  flex-direction: column;
}

.list-name {
  font-size: 32rpx;
  color: #333333;
}

.list-detail-box {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.list-type {
  width: 96rpx;
  line-height: 36rpx;
  text-align: center;
  border: 1px solid #4FB526;
  border-radius: 3px;
  font-size: 20rpx;
  color: #4FB526;
}

.list-type-detail {
  font-size: 24rpx;
  color: #333333;
}

.list-button {
  width: 100rpx;
  text-align: center;
  line-height: 52rpx;
  background: #FFDC5E;
  border-radius: 26rpx;
  font-size: 28rpx;
  color: #333333;
}

.list-print-date{
  font-size: 24rpx;
  color: #999999;
  margin-top:20rpx;
}

.list-print-time{
  width:100%;
  display:flex;
  justify-content:center;
  align-items:center;
  margin-top:40rpx;
  font-size: 28rpx;
  color: #333333;
}

.list-print-timeset{
  width:130rpx;
  line-height:52rpx;
  background: #FFDC5E;
  border-radius:26rpx;
  margin-left:30rpx;
  text-align:center;
}

.list-time-box {
  font-size: 24rpx;
  color: #999999;
  width: 100%;
  display: flex;
  margin-top:40rpx;
  flex-direction:column;
  align-items: flex-end;
}

.list-finish-time{
  font-size: 24rpx;
  color: #4FB526;
}

.list-time-text{
  font-size: 24rpx;
  color: #4FB526;
  letter-spacing: -0.58rpx;
  margin-bottom:8rpx;
}

.add-button {
  width: 100%;
  position:fixed;
  bottom:0;
  left:0;
}

.noexecuting-title {
  margin-top: 80rpx;
  font-size: 40rpx;
  color: #333333;
}

.noexecuting-desc {
  font-size: 28rpx;
  color: #666666;
  margin-top: 10rpx;
}

.noexecuting-img {
  width: 720rpx;
}

.list-name-point {
  width: 16rpx;
  height: 16rpx;
  background: #FFDC5E;
  margin-right: 12rpx;
}

.list-state {
  font-size: 24rpx;
  color: #999999;
}

.nofinishedList-img {
  width: 240rpx;
  margin-top: 300rpx;
}

.nofinishedList-text {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #666666;
}

/* pages/package_feature/kousuan/pointslist.wxss */
page {
  width: 100%;
  min-height:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-top: 10rpx;
}

view {
  box-sizing: border-box;
}

.points-list-box {
  width: 700rpx;
  height: 176rpx;
  padding: 24rpx 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.40);
  border-radius: 20rpx;
  margin-top: 30rpx;
}

.points-name-icon {
  width: 16rpx;
  height: 16rpx;
  background: #FFDC5E;
  margin-right: 12rpx;
}

.points-name {
  font-size: 32rpx;
  color: #333333;
  display:flex;
  align-items:center;
}

.points-img {
  width: 200rpx;

}

.point-num-box {
  display: flex;
  align-items: center;
}

.points-icon-style {
  width: 36rpx;
}

.points-num {
  font-size: 28rpx;
  color: #333333;
  margin: 0 16rpx;
}

.bottom-but{
  width:100%;
  position:fixed;
  bottom:0;
  left:0;
}

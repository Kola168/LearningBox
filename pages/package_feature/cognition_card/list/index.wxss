page {
  background: #FFE2A8;
}

.container {
  position: relative;
  z-index: 10;
  padding: 0 26rpx 240rpx;
}

.index-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 40rpx;
}

.index-top>view:first-child {
  display: flex;
  align-items: center;
}

.top-left {
  width: 70%;
}

.top-left image {
  width: 100%;
}

.top-right {
  width: 25%;
  font-size: 29rpx;
  color: #fff;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-radius: 24rpx;
  background: linear-gradient(to right, #FFC664, #FF3605);
  box-shadow: 0 4rpx 10rpx 0 rgba(255, 57, 7, 0.36);
}

.unable {
  filter: grayscale(100%);
}

.list-box {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 40rpx 36rpx;
}

.box-container {
  position: relative;
  display: flex;
  width: 48%;
  margin-bottom: 4%;
  border-radius: 24rpx;
  overflow: hidden;
}

.box-container:nth-child(odd) {
  margin-right: 4%;
}

.mian-img {
  width: 100%;
  border-radius: 24rpx;
}

.delete-img {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 10rpx;
  top: 12rpx;
}

.edit-text {
  position: absolute;
  left: 10rpx;
  top: 12rpx;
  background: rgba(0, 0, 0, .7);
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  padding: 0 8rpx;
  border-radius: 8rpx;
  color: #fff;
}

.edit-text image {
  width: 60%;
}

.handle-btns {
  position: fixed;
  left: 0;
  bottom: 100rpx;
  display: flex;
  width: 74%;
  padding: 0 13%;
  justify-content: space-between;
}

.handle-btns>view {
  width: 45%;
  color: #fff;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 38rpx;
  font-weight: bold;
  border-radius: 42rpx;
  text-align: center;
}

.btn-add {
  background: #A84C20;
  box-shadow: 0 3px 0 0 #8A3A13;
}

.btn-print {
  background: #FB5130;
  box-shadow: 0 3px 0 0 #E03716;
  position: relative;
}

.cover-but {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

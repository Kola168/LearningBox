.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #D8D8D8;
  padding-bottom: 100rpx;
}

.container image {
  width: 100%;
}

.btn {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  background: linear-gradient(to right, #feb23d, #f55314);
}
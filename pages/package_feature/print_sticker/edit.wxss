/* pages/package_feature/print_sticker/edit.wxss */
page {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tips-box {
  font-size: 24rpx;
  color: #666666;
  display: flex;
  align-items: center;
  margin-top: 28rpx;
}

.tips-icon {
  width: 36rpx;
  margin-right: 10rpx;
}

.edit-box {
  position: relative;
  box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.40);
  display: flex;
  margin-top: 60rpx;
}

.edit-bg-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.bottom-box {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}

.template-list-box {
  width: 100%;
  white-space: nowrap;
  padding: 0 12rpx;
  box-sizing: border-box;
  margin-bottom:20rpx;
}

.template-limit-height{
  height:180rpx;
  display:flex;
  align-items:center;
  flex-wrap:nowrap;
}

.template-item-box {
  margin: 0 10rpx;
  display: inline-block;
}

.template-name {
  font-size: 32rpx;
  color: #999999;
}

.template-type-selected {
  font-size: 32rpx;
  color: #333333;
}

.template-preview-img{
  width:163rpx;
}

.template-vertical-img{
  width:112rpx;
}

.template-item-selected{
  border: 3px solid #FFDC5E;
}

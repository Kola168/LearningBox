/* pages/package_feature/print_sticker/preview.wxss */
.back-index{
    position: fixed;
    left: 50%;
    bottom: 40rpx;
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    background: #ffe27a;
    color: #454545;
    transform: translateX(-50%);
    text-align: center;
    font-size: 32rpx;
}
.container{
    padding: 0 40px;
}
.preview_img{
    display: flex;
    margin: 36rpx 0;
    box-shadow: 0 0 20rpx #eee;
}
.preview_img image{
    width: 100%;
    height: 100%;
}
.print_count{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
    color: #333;
}
.print_count>image{
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx;
}
.handle_bar{
    display: flex;
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    height: 100rpx;
    border-top: 2rpx solid #ccc;
    color: #666;
}
.handle_bar>view{
    width: 30%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
}
.handle_bar>view button{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    height: 100rpx;
    color: #666;
}
.handle_bar>view image{
    width: 44rpx;
    height: 44rpx;
    margin-right: 8rpx;
}
.confirm_print{
    width: 40% !important;
    background: #ffe27a;
}
.confirm_print form,
.confirm_print button{
    color: #333;
    width: 100%;
}

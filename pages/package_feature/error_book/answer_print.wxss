page {
    min-height: 100%;
}

.preview {
    min-height: 100%;
    padding-bottom: 100rpx;
}

.preview image {
    width: 100%;
    height: auto;
}

.preview-btns {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
}

.btn-item {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    border-top: 1rpx solid #CECECE;
    color: #666;
}

.btn-item button {
    display: flex;
    align-items: center;
}

.btn-item image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 6rpx;
}

.btn-item:last-child {
    background: #FFE27A;
    border-top: 1rpx solid #FFE27A;
    color: #333;
}

.doc_setting {
    box-sizing: border-box;
    padding: 0 30rpx;
}

.setting_item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 110rpx;
    border-bottom: 1rpx solid #cecece;
}

.item_label {
    font-size: 32rpx;
}

.item_main {
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #999;
}

.print_num {
    width: 30rpx;
    height: 30rpx;
}

.document_print_num {
    min-width: 40rpx;
    text-align: center;
    margin: 0 10rpx;
    font-size: 30rpx;
}

.page_text {
    font-size: 26rpx;
}

.page_input {
    width: 80rpx;
    height: 45rpx;
    margin: 0 15rpx;
    box-shadow: 0 2rpx 5rpx 2rpx #efefef inset;
    color: #999;
    font-size: 24rpx;
    text-align: center;
    border-radius: 5rpx;
    overflow: hidden;
}

.color_check_box {
    display: flex;
    align-items: center;
    margin-left: 10rpx;
}

.color_check {
    width: 42rpx;
    height: 42rpx;
}

.color_type {
    font-size: 28rpx;
    margin: 0 16rpx;
}

.handle-bar {
    color: #454545;
    width: 100%;
    position: fixed;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    border-top: 2rpx solid #ececec;
}

.handle-bar>view , .handle-bar>button{
    width: 50%
}

.bar-cancel {
    background: #fff;
}

.bar-confirm {
    position: relative;
    background: #FFE27A;
    line-height:inherit;
}

.bottom-button-box{
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

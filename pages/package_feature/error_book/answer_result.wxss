.question {
  padding: 0 24rpx;
  border-bottom: 20rpx solid #F7F7F7;
}

.question-label {
  margin: 30rpx 0;
  font-size: 30rpx;
  color: #454545;
  position: relative;
  padding-left: 16rpx;
}

.question-label:before {
  content: '';
  position: absolute;
  left: 0;
  top: 15%;
  height: 70%;
  width: 6rpx;
  background: #FFC35B;
}

.question-img {
  margin-bottom: 40rpx;
}

.answer {
  padding: 0 24rpx 150rpx;
  text-align: center;
}

.answer-label {
  color: #666666;
  font-size: 36rpx;
  position: relative;
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
}

.answer-label:after,
.answer-label:before {
  content: '';
  height: 2rpx;
  width: 70rpx;
  background: #666;
  position: absolute;
  top: 50rpx;
}

.answer-label:before {
  left: -100rpx;
}

.answer-label:after {
  right: -100rpx;
}

.question image,
.answer image {
  width: 100%;
  height: auto;
}

.item-title {
  color: #5BC223;
  font-size: 30rpx;
  font-weight: bold;
}

.item-content {
  color: #333333;
  font-size: 28rpx;
  margin: 30rpx 0 40rpx;
}

.handle-btns {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
}

.btn-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  color: #666;
  border-top: 2rpx solid #CECECE;
}

.two-btns .btn-item {
  width: 50%;
  font-size: 36rpx;
}

.three-btns .btn-item {
  width: 33.33%;
}

.preview-btn {
  background: #FFE27A;
  color: #333;
  border-top: 2rpx solid #FFE27A;
  font-size: 36rpx;
}

.btn-item image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.btn-tip {
  width: 94%;
  position: absolute;
  left: 0;
  top: -50rpx;
  color: #FFB008;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  height: 50rpx;
  background: #FFF6D8;
  padding: 0 3%;
  justify-content: space-between;
  font-weight: bold;
}

.btn-tip image {
  width: 22rpx;
  height: 22rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 280rpx;
}

.empty image {
  width: 220rpx;
  height: auto;
}

.empty view {
  font-size: 32rpx;
  color: #666666;
  margin: 36rpx 0 60rpx;
}

.empty button {
  font-size: 36rpx;
  color: #A5A5A5;
  height: 80rpx;
  line-height: 76rpx;
  border-radius: 40rpx;
  padding: 0 60rpx;
  border: 2rpx solid #CECECE;
}

.add-errorbook {
  position: fixed;
  right: 24rpx;
  bottom: 180rpx;
  width: 120rpx;
  height: 120rpx;
}

.ios-tip-modal {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.50);
  display: flex;
  justify-content: center;
  align-items: center;
}

.ios-bg {
  width: 100%;
  height: 100%;
}
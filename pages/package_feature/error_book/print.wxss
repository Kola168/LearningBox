/* pages/error_book/pages/error_book/print.wxss */
page {
    width: 100%;
    height: 100%;
    font-size: 32rpx;
}

.swiper-box {
    border-top: 2rpx solid #979797;
}


.top {
    /* border: 2rpx solid #666; */
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bottom {
    position: fixed;
    left: 0;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    display: flex;
    font-size: 36rpx;
    border-top: 2rpx solid #CECECE;
    color: #666;
    box-sizing: border-box;
}

.bottom button {
    font-family: "PingFangSC-Medium";
    color: #333333;
    letter-spacing: 0;
    text-align: center;
}

.left,
.right {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
}

.right {
    color: #333;
    background: #ffe27a;
}

.left {
    color: #666;
}

.left image {
    width: 44rpx;
    margin-right: 24rpx;
}

.templetes {
    position: fixed;
    left: 0;
    bottom: 320rpx;
    height: 180rpx;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
    white-space: nowrap;
    line-height: 300rpx;
}

.templetes-item {
    display: inline-block;
    height: 180rpx;
    width: calc(180rpx * (1456 / 2156));
    /* background: #333; */
    margin-right: 40rpx;
    box-sizing: border-box;
    /* overflow: hidden; */
}

.templetes-item image {
    width: 100%;
    height: 94%;
    position: relative;
}

.wrap-fun {
    position: relative;
    width: 100%;
    height: calc(100% - 100rpx);
    overflow-y: scroll;
}

.wrap-fun {
    height: calc(100% - 100rpx - 130rpx);
    padding-bottom: 130rpx;
}

.wrap>image,
.wrap-fun>image {
    width: 750rpx;
}

.turn {
    display: flex;
    position: fixed;
    align-items: center;
    left: 0;
    bottom: 500rpx;
    padding: 30rpx 0 40rpx;
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
}

.turn-image {
    display: -webkit-flex;
    margin-right: 306rpx;
}

.turn-content {
    display: flex;
    width: 100%;
    box-sizing: border-box;
    padding-left: 24rpx;
    font-size: 24rpx;
}

.turn-image-item {
    width: 50rpx;
    vertical-align: top;
}

.turn-image-left {
    margin-right: 36rpx;
}

.temp-border {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
    border: 2rpx solid #e4e4e4;
    display: flex;
    align-items: flex-end;
    justify-content: center;
}

.temp-border>view {
    width: 100%;
    line-height: 40rpx;
    background: #e4e4e4;
    font-size: 20rpx;
    color: #666;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.yellow {
    border: 2rpx solid #ffe27a;
    /* box-shadow: 0 0 16rpx #ffe27a; */
}

.yellow view {
    background: #ffe27a !important;
    color: #333 !important;
}

swiper-item {
    display: flex;
    align-items: center;
}

.setting {
    position: absolute;
    left: 24rpx;
    bottom: 100rpx;
    width: calc(100% - 48rpx);
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    /* padding: 0 24rpx; */
    box-sizing: border-box;
}

.setting-1 {
    bottom: 210rpx;
    border-bottom: 2rpx solid #CECECE;
}

.setting-left {
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #333333;
}

.setting-right,
.setting-right>view {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #666666;
    letter-spacing: -0.78px;
    display: flex;
    align-items: center;
    margin-right: 10rpx;
}

.setting image {
    width: 40rpx;
    height: 40rpx;
    margin-left: 16rpx;
}

.print-effect-pic {
    width: 26rpx!important;
    height: 26rpx!important;
    margin:0 20rpx 0 10rpx;
}

.progress-title, .progress-content{
    color: #000;
    text-align: center;
    font-size: 25rpx;
    margin-bottom: 20rpx;
}
<!-- <image mode="widthFix">
    </image> -->
<swiper class="swiper-box" duration="500" current="{{num}}" bindchange="tab_slide" circular="{{circular}}" style="width:100%;height:{{areaHeight}}rpx">
    <block wx:for="{{convert_urls}}" wx:key="{{index}}">
        <swiper-item>
            <view class="top" style="width:{{areaWidth}}rpx;height:{{areaHeight-10}}rpx">
                <image style="width:{{width}}rpx" mode="widthFix" src="{{item}}" catchtap=""></image>
            </view>
        </swiper-item>
    </block>
</swiper>
<!-- </view> -->
<!--翻页-->
<view class="turn">
    <view class="turn-content">
        <text style="color: #999;">{{num+1}}/{{convert_urls.length}}</text>
    </view>
    <view class="turn-image">
        <image class="turn-image-item turn-image-left" src="/images/preview-turn-left.png" mode="widthFix" data-turn="left"
            catchtap="turnImg"></image>
        <image class="turn-image-item" src="/images/preview-turn-right.png" mode="widthFix" data-turn="right" catchtap="turnImg"></image>
    </view>
</view>
<scroll-view class="templetes" scroll-x>
    <view class="templetes-item" wx:for="{{template}}" wx:key="{{index}}" id="{{index}}" bindtap="changeTemp">
        <image mode="widthFix" src="{{item.url.url}}">
            <view class="temp-border {{template_id==item.id?'yellow':''}}">
                <view>{{item.name}}</view>
            </view>
        </image>
    </view>
</scroll-view>
<view class="setting setting-1">
    <view class="setting-left">
        <!-- 色彩选择 -->
        <view>
            <text class='title'>色彩选择</text>
            <image class="print-effect-pic" src="/images/manage_intro.png" bindtap="showExamModal"/>
        </view>
    </view>
    <view class="setting-right">
        <view class="switch-item" wx:for="{{selectColors}}" wx:key="*this">
             <text>{{item.name}}</text>
            <image mode="widthFix" src="{{item.selected ?'/images/selected_yellow.png':'/images/noselected.png'}}" bindtap="chooseColor" data-index="{{index}}"></image>
        </view>
    </view>
</view>
<view class="line"></view>
<view class="setting">
        <view class="setting-left">
            打印解析
        </view>
        <view class="setting-right">
            <view>
                <text>是</text>
                <image mode="widthFix" src="/images/{{answer==1?'selected_yellow':'noselected'}}.png"
                    bindtap="changeAnswer" id="1"></image>
            </view>
            <view style="margin-left:30rpx;">
                <text>否</text>
                <image mode="widthFix" src="/images/{{answer==2?'selected_yellow':'noselected'}}.png"
                    bindtap="changeAnswer" id="2"></image>
            </view>
        </view>
    </view>
<view class="bottom">
    <button open-type="{{allowCamera==1?'openSetting':''}}" bindopensetting="authBack" hover-class="none" class="left"
        bindtap="save">
        <image mode="widthFix" src="../images/error_book_save.png"></image>
        <text>保存</text>
    </button>
    <form report-submit="{{true}}" bindsubmit="quickPrint" class="right">
        <button hover-class="none" open-type="{{hasAuthPhoneNum?'':'getPhoneNumber'}}" bindgetphonenumber="{{hasAuthPhoneNum?'':'getPhoneNumber'}}" form-type='submit'>立即打印</button>
    </form>
</view>

<!-- 打印确认框 -->
<confirm-print bindconfirm="confirmPrint" modal="{{confirmModal}}"></confirm-print>

<confirm-reinforce-modal></confirm-reinforce-modal>
<progress-modal  percent="{{percent}}" wx:if="{{showupLoad}}" bindcancel="cancelDraw" slotTitle="{{showTitle}}" slotContent="{{showContent}}">
    <view class="progress-title" slot="title">图片正在处理中</view>
    <view class="progress-content" slot="content">处理时间预计7秒左右，请耐心等待</view>
</progress-modal>
<import src="../../../lib/toast/wetoast.wxml" />
<template is="wetoast" data="{{...__wetoast__}}" />

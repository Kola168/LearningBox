/* pages/print_doc/print_invoice_list/print_invoice_list.wxss */
.list-container {
  position: relative;
  width: 100%;
  height: calc(100% - 100rpx);
  box-sizing: border-box;
  overflow-y: scroll;
  overflow-x: hidden;
  padding-bottom: 100rpx;
}

.invoice-item-container {
  width: 100%;
  height: 100%;
}

.invoice-item {
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.invoice-item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 30rpx;
}

.invoice-detail,
.company-name {
  padding: 10rpx 30rpx;
}

.invoice-detail text {
  margin-right: 20rpx;
}

.company-name {
  color: #999999;
}

.close {
  width: 28rpx;
}

.title {
  padding: 30rpx 30rpx;
  font-size: 36rpx;
  color: #000;
  max-length: 500rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.line {
  border-bottom: 1px solid #ebeaea;
  margin: 10rpx 0rpx;
}

.line-dashed {
  border-bottom: 1px dashed #ebeaea;
  margin: 10rpx 30rpx;
}

.line-bolder {
  background-color: #F5F5F5;
  height: 20rpx;
  width: 100%;
  display: flex;
}

.item-setting-block {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 30rpx 30rpx;
  font-size: 28rpx;
  color: #FFDC5E;
}

.item-setting {
  display: flex;
  flex-direction: row;
}

.item-setting .text-preview {
  margin-left: 20rpx;
  border-radius: 30rpx;
  padding: 10rpx 50rpx;
}

.preview {
  background-color: #FFDC5E;
  color: #000;
}

.delete {
  border: 1px solid #999999;
  color: #999999;
}

.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  z-index: 888;
  border-top: 2rpx solid #cecece;
}

.bottom-left {
  color: #666666;
  font-size: 36rpx;
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 2rpx solid #fff;
  box-sizing: border-box;
}

.bottom-right {
  width: 50%;
  color: #666;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bottom-count {
  position: absolute;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  padding: 6rpx 0;
  text-align: center;
}

.bottom form {
  width: 100%;
}

.bottom button {
  width: 100%;
  padding: 0;
  padding-left: 60rpx;
  padding-right: 60rpx;
  line-height: 100rpx;
  border-radius: 0;
  background: #FFDC5E!important;
  color: #000;
}

.button-gray {
  background: #f5f5f5 !important;
  border-left: 2rpx solid #fff;
}

.no-invoice {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  align-content: center;
  width: 100%;
  height: 750rpx;
}
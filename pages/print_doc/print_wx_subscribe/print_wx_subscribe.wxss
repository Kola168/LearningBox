page {
  padding: 25rpx;
  box-sizing: border-box;
}

.type {
  overflow-x: hidden;
}

.play-title {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.title-modal {
  background: #FFDC5E;
  width: 6rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.url {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.play-item {
  margin-bottom: 60rpx;
}

.play-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
}

.left {
  display: flex;
  align-items: center;
}

.border-bold {
  width: calc(100% + 60rpx);
  height: 5rpx;
  background: #f5f5f5;
  margin: 30rpx -30rpx;
}

.cancel_btn {
  width: 140rpx;
  height: 50rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.cancel_button {
  font-size: 26rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #999;
}

.subscribe_btn {
  width: 140rpx;
  height: 50rpx;
  background: #FFDC5E;
  border-radius: 12rpx;
}

.subscribe_button {
  font-size: 26rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #000;
}
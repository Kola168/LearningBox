/* pages/print_doc/duplicate_edit/duplicate_edit.wxss */
page {
  width: 100%;
  height: 100%;
  position: fixed;
}

.top {
  background: #7F7F7F;
  width: 100%;
  height: 77%;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}

.top-tip {
  position: relative;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  height: 50px;
}

.icon_edit {
  height: 44rpx;
  width: 44rpx;
  margin-right: 10rpx;
}

.top_text {
  padding: 25rpx;
}

.editor-area {
  overflow: hidden;
  position: absolute;
  background: #fff;
  border: 5rpx dashed #FE8D77;
}

.user-img {
  top: 0;
  left: 0;
  position: absolute;
  z-index: 400;
  transform: translate3d(0, 0, 0);
  transform-origin: 50% 50% 0;
}

.border {
  width: 558rpx;
  height: 785rpx;
  border: 5rpx dashed #FE8D77;
  overflow: hidden;
}

.image {
  width: 558rpx;
}

.footer {
  position: fixed;
  bottom: -15px;
  width: 100%;
  height: 9%;
  background: #fff;
  z-index: 1000;
  color: #333;
}

.cover-box {
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  height: 100rpx;
  background: #555;
  z-index: 1000;
}

.choose {
  display: flex;
  justify-content: space-between;
  margin: 30rpx;
}

.color {
  display: flex;
  align-items: center;
}

.kind {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.selected {
  width: 45rpx;
}

.total {
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx 30rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
}

.type {
  font-size: 28rpx;
  padding-right: 15rpx;
}

.A4 {
  padding-right: 0;
}

.btn {
  position: fixed;
  bottom: 0;
  background: #FFE27A;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #000;
  z-index: 1000;
}

.btn button {
  color: #000;
  height: 100rpx;
  line-height: 100rpx;
}

.modal-wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.confirm-modal {
  width: 80%;
  background: #fff;
  color: #333;
  font-size: 40rpx;
  border-radius: 8rpx;
  padding-top: 40rpx;
  text-align: center;
}

.confirm-modal image {
  width: 80%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.print {
  background: #FFE27A;
  color: #333;
  font-size: 36rpx;
}
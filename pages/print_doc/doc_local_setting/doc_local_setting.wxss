.doc-setting {
  box-sizing: border-box;
  padding: 0 30rpx;
}

.document-title {
  color: #333;
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 30rpx solid #f5f5f5;
}

.title-text {
  width: 85%;
  color: #333;
  font-size: 35rpx;
  margin-right: 20rpx;
  font-weight: bold;
  display: flex;
}

.text-name {
  max-width: 80%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.text-suffix {
  width: 20%;
}

.title-preview {
  width: 15%;
  text-align: center;
  font-size: 20rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 22rpx;
  background: #FFDC5E;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #cecece;
}

.setting-range-item {
  padding: 28rpx 0;
  border-bottom: 1rpx solid #cecece;
}

.item-label {
  font-size: 32rpx;
}

.item-main {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #999;
}

.setting-range-item {
  flex-direction: column;
  font-size: 28rpx;
}

.range-options {
  display: flex;
  margin: 20rpx 0;
}

.options-item {
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 22rpx;
  background: #E9E9E9;
  font-size: 24rpx;
  color: #666666;
  margin-right: 20rpx;
  padding: 0 20rpx;
}

.options-item-active {
  background: #FFDC5E;
  color: #333;
}

.active-option {
  display: flex;
  align-items: center;
}

.all-text {
  color: #FF8A5F;
}

.print-num {
  width: 30rpx;
  height: 30rpx;
}

.document-print-num {
  min-width: 40rpx;
  text-align: center;
  margin: 0 10rpx;
  font-size: 30rpx;
}

.page-text {
  font-size: 26rpx;
}

.page-input {
  width: 80rpx;
  height: 45rpx;
  margin: 0 15rpx;
  box-shadow: 0 2rpx 5rpx 2rpx #efefef inset;
  color: #999;
  font-size: 24rpx;
  text-align: center;
  border-radius: 5rpx;
  overflow: hidden;
}

.color-check-box {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.color-check {
  width: 42rpx;
}

.color-type {
  font-size: 28rpx;
  margin: 0 16rpx;
}

.zoom-view {
  padding: 36rpx 30rpx 100rpx;
}

.view-content {
  padding: 30rpx 46rpx;
  display: flex;
  flex-wrap: wrap;
}

.content-item {
  width: 26%;
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #666666;
  font-size: 28rpx;
  margin-bottom: 32rpx;
}

.content-item:nth-child(3n-1) {
  margin: 0 11%;
}

.content-item image:first-child {
  width: 100%;
}

.item-img {
  position: relative;
  margin-bottom: 4rpx;
}

.item-check-active {
  border: 4rpx solid #FFDC5E;
}

.item-check {
  position: absolute;
  right: 8rpx;
  bottom: 32rpx;
  width: 36rpx;
}

.conf-box {
  color: #454545;
  width: 100%;
  background: #FFDC5E;
  line-height: 98rpx;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
  font-weight: bold;
}

.statistic-check-image {
  width: 80rpx;
  height: auto;
}

.confirm-main {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5)
}

.confirm-main .confirm-modal {
  width: 80%;
  border-radius: 30rpx;
  background-color: #fff;
  text-align: center;
}

.confirm-title {
  font-size: 38rpx;
  font-weight: 400;
  margin: 40rpx 0 40rpx;
}

.confirm-content {
  font-size: 28rpx;
  color: #333333;
  margin: 0 40rpx 48rpx;
}

.main-btn {
  display: flex;
  height: 88rpx;
  border-top: 1px solid #e0e0e0;
}

.main-btn .btn {
  flex: 1;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
}

.cancel-btn {
  border-radius: 0 0 0 30rpx;
}

.confirm-btn {
  background: #FFDC5E;
  color: #454545;
  border-radius: 0 0 30rpx 0;
}
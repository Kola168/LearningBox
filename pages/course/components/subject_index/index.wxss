/* pages/course/components/components/subject_index/index.wxss */
@import "/lib/toast/wetoast.wxss";
.learn-main {
  padding: 0 24rpx 60rpx 24rpx;
}

.head-main {
  width: 100%;
  padding: 40rpx 0;
}

.swiper-main, swiper-item {
  margin: 0;
  width: 100%;
  height: 260rpx;
  border-radius: 30rpx;
}

.swiper-main image {
  width: 100%;
  height: 260rpx;
  background-color: #ccc;
  border-radius: 30rpx;
}

/* nav-content */

.nav-content .nav-title{
  color: #333333;
  font-size: 36rpx;
  font-weight: 500;
  text-align: left;
}

.nav-content .nav-m-content {
  padding: 40rpx 24rpx 0;
  height: 74rpx;
}

.desc-icon {
  width: 100%;
  height: 74rpx;
  position: relative;
}

.desc-icon .desc-content {
  position: absolute;
  z-index: 10;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  color: #999999;
  font-size: 20rpx;
  text-align: left;
  padding-left: 46px;
  box-sizing: border-box;
}

.main-title{
  position: relative;
  margin-top: 50rpx;
  height: 44rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.top-text {
  position: absolute;
  left: 0;
  bottom: -5rpx;
  z-index: 12;
  width: 100%;
  text-align: center;
}

.main-title:after{
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  z-index: 10;
  margin-left: -80rpx;
  width: 160rpx;
  height: 12rpx;
  background-color: #FFDC5E;
}

.box-entry {
  display: flex;
  margin-top: 32rpx;
  width: 100%;
  justify-content: space-between;
}

.box-entry .left-entry, .right-entry{
  position: relative;
  width: 340rpx;
  height: 148rpx;
  padding: 20rpx 14rpx 0 20rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 2px 8px 0 rgba(204,204,204,0.30);
}


.box-entry>view:nth-child(2n+1){
  margin-right: 22rpx;
}

.box-entry .entry-title{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  color: #333333;
  font-size: 32rpx;
  padding-bottom: 5rpx;
}

.box-entry .sub-main {
  position: absolute;
  left: 20rpx;
  top: 60rpx;
  width: calc( 100% - 20rpx );
}

.box-entry .sub-main .sub-text {
  margin-bottom: 12rpx;
  font-size: 20rpx;
  color: #999999;
}

.box-entry .sub-main .sub-label {
  width: 102rpx;
  height: 28rpx;
  line-height: 28rpx;
  background: #FFEBE7;
  border-radius: 14rpx;
  text-align: center;
  font-size: 16rpx;
  color: #FB5130;
}


.sub-main .entry-icon {
  width: 64rpx;
  height: 66rpx;
  position: absolute;
  right: 14rpx;
  bottom: -10rpx;
}


.learn-report-entry .main-title {
  margin-top: 60rpx;
}

/* 同步课堂 */
.sync-classroom {
  margin-top: 80rpx;
}

.switch-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 140rpx 0;
}

.switch-bar .switch-item {
  position: relative;
  width: 120rpx;
  height: 50rpx;
  font-size: 28rpx;
} 

.switch-bar .switch-item .switch-line {
  margin: 12rpx auto 0;
  width: 30rpx;
  height: 4rpx;
  background-color: transparent;
}



/* subject-list */

.subject-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 44rpx;
  width: 100%;
}

.subject-list .subject-item {
  position: relative;
  margin-bottom: 22rpx;
  width: 340rpx;
  height: 174rpx;
  background-color: #efefef;
  border-radius: 20rpx;
}

.subject-list .subject-item:nth-child(2n+1) {
  margin-right: 22rpx;
}

.subject-list .subject-item .last-learn-title{
  position: absolute;
  left: 16rpx;
  top: 66rpx;
  width: 200rpx;
  height: 40rpx;
  color: #333333;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}

.learn-num {
  position: absolute;
  left: 16rpx;
  bottom: 12rpx;
  color: #999999;
  font-size: 20rpx;
}

.scroll-list .tab-list {
  width: calc( 100% - 88rpx );
  margin: 40rpx 44rpx 0;
  white-space: nowrap;
  overflow: scroll;
}

.scroll-list .tab-list .tab-item {
  margin-right: 70rpx;
  display: inline-block;
  width: fit-content;
  font-size: 28rpx;
}

.scroll-list .tab-list .tab-line {
  margin: 14rpx auto 0;
  width: 30rpx;
  height: 4rpx;
  background-color: transparent;
}

.content {
  margin-top: 20rpx;
}

.content .exam-item {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
}

.content .exam-item image {
  margin-right: 34rpx;
  width: 148rpx;
  height: 148rpx;
}

.content .exam-item .center-main {
  margin-right: 64rpx;
  flex-shrink: 2;
  width: 336rpx;
}

.content .exam-item .title {
  display: -webkit-box;
  margin-bottom: 5rpx;
  color: #333333;
  font-size: 28rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.content .exam-item .desc {
  color: #999;
  font-size: 24rpx;
}

.content .btn-print {
  width: 136rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 26rpx;
  color: #333333;
  background-color: #FFDC5E;
}

.empty-box {
  text-align: center;
  padding: 20rpx;
}

.btn-more {
  margin: 10rpx auto;
  width: 160rpx;
}



/* active */
.active {
  color: #FFA200!important;
}

.active-line {
  background-color: #FFA200!important;
}
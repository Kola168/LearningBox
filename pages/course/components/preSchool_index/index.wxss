/* pages/course/components/components/preSchool_index/index.wxss */
@import "/lib/toast/wetoast.wxss";
.container {
  padding: 0 24rpx;
}

.swiper {
  height: 300rpx;
}

.slide-img {
  width: 100%;
  border-radius: 20rpx;
}

.swiper-main {
  width: 100%;
  position: relative;
}

swiper {
  width: calc( 100% - 48rpx );
  margin: 20rpx 24rpx 0;
  border-radius: 20rpx;
}

swiper swiper-item {
  border-radius: 20rpx;
}

.dots-main {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 10rpx;
}

.dot-item {
  margin: 0 10rpx;
  width: 28rpx;
  height: 8rpx;
  background-color: rgba(204, 204, 204, .8);
}

.dot-item-active {
  background-color: rgb(255, 255, 255);
}

.sale-price-box,
.user,
.user-info,
.last-course,
.user-btns,
.recommend-top,
.top-label,
.top-more,
.recommend-bottom,
.bottom-text,
.bottom-price,
.fast-nav,
.nav-item {
  display: flex;
}

.fast-nav {
  justify-content: center;
  align-items: center;
  margin: 40rpx 0 50rpx;
}

.nav-item {
  flex-direction: column;
  align-items: center;
  color: #454545;
  font-size: 24rpx;
  width: 28%;
}

.nav-item image {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 14rpx;
}

.user-info,
.last-course,
.user-btns {
  flex-direction: column;
  align-items: center;
}

.user {
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, .5);
  border-radius: 18rpx;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.user-info {
  width: 20%;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-name {
  width: 80%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.last-course {
  width: 55%;
  align-items: flex-start;
  justify-content: center;
}

.no-last-course {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
}

.course-name {
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.course-progress {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

progress {
  margin-right: 20rpx;
  width: 80%;
}

.progress-text {
  font-size: 28rpx;
  color: #333;
}

.user-btns {
  width: 25%;
  font-size: 24rpx;
  justify-content: flex-end;
}

.user-btns>view {
  width: 80%;
  border-radius: 26rpx;
  text-align: center;
}

.btn-go {
  background: #FFDC5E;
  color: #454545;
  height: 52rpx;
  line-height: 52rpx;
  box-shadow: 0 4rpx 8rpx 0 #FFDC5E;
}

.recommend {
  padding-bottom: 50rpx;
}



.recommend-top {
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.top-label {
  font-weight: bold;
  color: #333;
  font-size: 36rpx;
  align-items: center;
}

.top-label image {
  width: 22rpx;
  height: 32rpx;
  margin-left: 12rpx;
}

.top-more {
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.top-more image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 4rpx;
}

.select-project {
  white-space: nowrap;
}

.project-item {
  width: 45%;
  font-size: 28rpx;
  color: #333;
  display: inline-block;
  margin-right: 20rpx;
}

.project-item image {
  margin-bottom: 12rpx;
  width: 100%;
  border-radius: 12rpx;
}

.project-item view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-item {
  border-radius: 26rpx;
  box-shadow: 4px 4px 15px rgba(204, 204, 204, .5);
  margin-bottom: 30rpx;
  position: relative;
}

.member-count {
  color: #999999;
  font-size: 24rpx;
}

.course-cover {
  height: 280rpx;
  border-top-left-radius: 26rpx;
  border-top-right-radius: 26rpx;
  overflow: hidden;
}

.course-cover image {
  width: 100%;
}

.recommend-bottom {
  padding: 20rpx;
  align-items: center;
}

.bottom-text,
.bottom-price{
  flex-direction: column;
}

.bottom-text {
  width: 55%;
  font-size: 28rpx;
  color: #666;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.desc-ios {
  width: 100%;
}

.bottom-price {
  width: 45%;
  justify-content:center;
  align-items: flex-end;
}

/* .price-android {
  width: 45%;
} */

.bottom-price image {
  width: 120rpx;
}

.original-price {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

.sale-price-box{
  align-items: center;
}

.sale-price {
  font-weight: bold;
  font-size: 44rpx;
  color: #F72B3A;
  margin-left: 12rpx;
}

.buy-btn {
  height: 52rpx;
  line-height: 52rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 26rpx;
  margin-left: 16rpx;
  background: #FFE27A;
  padding: 0 36rpx;
}

.buy-btn-ed{
  color: #4FB526;
  margin-left: 16rpx;
  font-size: 32rpx;
}
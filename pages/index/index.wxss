/**index.wxss**/
page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 24rpx;
}

.swiper {
  width: 100%;
  height: 220rpx;
  box-sizing: border-box;
  padding-bottom: 26rpx;
}

swiper-item {
  border-radius: 16rpx;
}

.swiper image {
  width: 100%;
  height: 220rpx;
  border-radius: 16rpx;
}

.print-nomal {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-bottom: 12rpx;
}

.print-nomal image {
  position: relative;
  width: calc((100% - 20rpx)/3);
  height: 200rpx;
}

.print-nomal view {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 26rpx;
  left: 28rpx;
  color: #fff;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
}

.home-title {
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #454545;
  letter-spacing: 0;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.home-title>view>text {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0;
  text-align: center;
  margin-right: 10rpx;
}

.home-title>view {
  display: flex;
  align-items: center;
}

.home-title>view>image {
  width: 12rpx;
  height: 12rpx;
}

.tool-wrap {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.tool-item {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333333;
  letter-spacing: 0.62rpx;
  width: 20%;
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tool-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 14rpx;
}

.study-plan-wrap {
  white-space: nowrap;
  display: flex;
  flex-wrap: no-wrap;
}

.study-plan {
  position: relative;
  width: 100%;
  height: 180rpx;
  box-shadow: 0 2px 20rpx 0 rgba(204, 204, 204, 0.37);
  border-radius: 20rpx;
  margin-top: 70rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: space-between;
}

.study-plan-wrap .study-plan {
  width: 90%;
  display: inline-block;
  margin-right: 30rpx;
  margin-top: 30rpx;
}

.study-plan-image {
  position: absolute;
  top: -30rpx;
  left: 30rpx;
  width: 180rpx;
  height: 180rpx;
  background: #ededed;
  box-shadow: 0 -4rpx 20rpx 0 rgba(204, 204, 204, 0.34);
  border-radius: 16rpx;
}

.study-plan>view {
  width: calc(100% - 250rpx);
  height: 100%;
  margin-left: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}

.study-plan .has-plan {
  justify-content: flex-start;
  margin-top: 30rpx;
  box-sizing: border-box;
}

.progress {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: 0;
  margin-top: 20rpx;
}

.progress>progress {
  width: 75%;
  margin-right: 20rpx;
}

.study-plan view:nth-child(1) {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  letter-spacing: 0;
}

.add-plan {
  display: flex;
  justify-content: flex-end;
  margin-top: 26rpx;
  margin-right: 30rpx;
}

.add-plan view {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  background: #FFDC5E;
  border-radius: 30rpx;
  padding: 6rpx 24rpx;
  display: inline-block;
}

.content-list {
  width: 100%;
}

.content-image {
  width: 100%;
  height: 320rpx;
  margin-bottom: 50rpx;
}

.tips {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: SourceHanSansCN-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  margin-bottom: 76rpx;
}

.tips-sub {
  margin-bottom: 50rpx;
}

.tips>view {
  width: 336rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F7F7F7;
  border-radius: 18rpx;
  box-sizing: border-box;
}

.tips image {
  width: 36rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.auth-button {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100% !important;
  height: 100%;
  background: transparent;
}

.subject-aptitude {
  width: 100%;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.subject-aptitude image {
  width: 100%;
  height: 80rpx;
  margin-bottom: 30rpx;
}


.subject-aptitude image:first-child {
  margin-bottom: 40rpx;
}

.subject-aptitude image:last-child {
  margin-bottom: 50rpx;
}

.study-center {
  background: #F7F7F7;
  border-radius: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8rpx 26rpx;
  margin: 0 auto;
  width: 30%;
  margin-bottom: 60rpx;
}

.study-center image {
  width: 10rpx;
  height: 10rpx;
  margin-left: 10rpx;
}

.subject-class-title {
  width: 100%;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.subject-class-title image {
  width: 100%;
  height: 50rpx;
}

.special {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}

.special image {
  width: 48%;
  height: 100rpx;
  border-radius: 20rpx;
}

.recommend-title {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
  color: #454545;
  font-weight: 500;
  letter-spacing: -0.43px;
  width: 100%;
  box-sizing: border-box;
}

.recommend-title image {
  width: 38rpx;
  height: 38rpx;
  margin-left: 12rpx;
}

.recommend {
  white-space: nowrap;
  width: 100%;
  box-sizing: border-box;
}

.other {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
}

.course {
  width: 45%;
  height: 200rpx;
}

.other image {
  width: 100%;
  height: 200rpx;
  border-radius: 14rpx;
  margin-bottom: 12rpx;
}

.small-title {
  width: 100%;
  text-align: left;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: 0;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical; */
}

.small-title:nth-child(2) {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  margin-bottom: 0;
}

.auth-button-bottom {
  background: #ffdc5e;
  width: 60% !important;
  height: 100rpx;
  position: fixed;
  bottom: 100rpx;
  left: 20%;
  line-height: 100rpx;
  text-align: center;
  padding: 0;
  border-radius: 50rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
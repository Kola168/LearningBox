/* pages/index/grade.wxss */

page {
    width: 100%;
    height: 100%;
    padding: 24rpx;
    box-sizing: border-box;
}

.choose-grade {
    width: 100%;
    height: 50rpx;
    margin-bottom: 20rpx;
}

.title {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #454545;
    letter-spacing: -1.04rpx;
}

.wrap {
    width: 100%;
    padding: 0 52rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin: 30rpx auto 60rpx;
}

.wrap view {
    width: 160rpx;
    height: 68rpx;
    /* background: #FFDC5E; */
    border: 2rpx solid #E7E7E7;
    border-radius: 60rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333333;
    letter-spacing: -1.56rpx;
    text-align: center;
    line-height: 68rpx;
}

.top {
    margin-top: 40rpx;
}

.active-grade {
    background: #FFDC5E;
    border: 2rpx solid #E7E7E7;
}

.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 98rpx;
    background: #FFDC5E;
    text-align: center;
    line-height: 98rpx;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: center;
}

.senior{
    margin-bottom: 142rpx;
}
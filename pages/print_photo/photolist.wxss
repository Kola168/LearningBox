/* pages/print_photo/photolist.wxss */
page {
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
  padding-bottom: 160rpx;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

view {
  box-sizing: border-box;
}

.nophoto-tips-box {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.add-img {
  width: 396rpx;
}

.add-img-tips {
  width: 520rpx;
  margin-top: 196rpx
}

.add-img-tps-text {
  margin-top: 30rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #666;
}

.bottom-button-box {
  width: 100%;
  line-height: 100rpx;
  font-size: 36rpx;
  display: flex;
  position: fixed;
  border-top: 1px solid #eaeaea;
  bottom: 0;
  left: 0;
  background:#fff;
}

.but-heigher{
  height:140rpx;
}

.bottom-button-style {
  flex: 1;
  height:100rpx;
  text-align: center;
  border-bottom: 1px solid #eaeaea;
}

.bottom-button-white {
  background: #fff;
}

.bottom-button-conf {
  color: #454545;
}

.bottom-button-refuse {
  color: #A5A5A5;
  background: #EAEAEA;
}

.top-tips {
  width: 100%;
  line-height: 48rpx;
  text-align: center;
  background: #FFFAE9;
  font-size: 24rpx;
  color: #FF9A55;
}

.photo-list-box {
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.photo-item-box {
  width: 336rpx;
  margin-top: 24rpx;
  position: relative;
  border: 2rpx solid #ffe27a;
  flex-shrink: 0;
  box-sizing: content-box;
}

.photo-item-img {
  width: 100%;
}

.photo-delete-icon {
  width: 48rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.photo-edit-box {
  width: 100%;
  padding: 10rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.photo-edit-but {
  line-height: 40rpx;
  width: 68rpx;
  text-align: center;
  font-size: 20rpx;
  color: #454545;
  background: #ffdc5e;
  border-radius: 5rpx;
}

.photo-pluss-box {
  display: flex;
  align-items: center;
}

.photo-pluss-icon {
  width: 32rpx;
}

.photo-pluss-num {
  width: 48rpx;
  line-height: 32rpx;
  background: #f5f5f5;
  border-radius: 5rpx;
  font-size: 20rpx;
  color: #454545;
  text-align: center;
  margin: 0 8rpx;
}

.photo-normal-add {
  width: 332rpx;
  height: 23rpx;
  margin-top: 24rpx;
  border: 4rpx dashed #ccc;
  flex-shrink: 0;
  box-sizing: content-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.small-img-tip {
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 90rpx;
  left: 0;
  font-size: 22rpx;
  color: #fff;
}

.small-tip-text {
  padding: 4rpx 10rpx 4rpx 8rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 25rpx;
}

.photo-add-icon {
  width: 136rpx;
  margin-top: 90rpx;
}

.photo-add-text {
  font-size: 32rpx;
  color: #cccccc;
  margin-top: 60rpx;
}

.mode-tips-bg{
  width:100%;
  height:100%;
  position:fixed;
  background:rgba(0,0,0,0.5);
  top:0;
  left:0;
  display:flex;
  justify-content:center;
  align-items:center;
  z-index:999;
}

.mode-tips-img{
  width:572rpx;
}

/* pages/package_subject/sync_learn/components/member-toast/index.wxss */


.member-toast {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  display: flex;
  flex-direction: column;  
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  background-color: rgba(0,0,0, .7);
}

.member-toast image {
  width:620rpx;
  border-radius: 30rpx 30rpx 0 0;
}

.member-main {
  width: 620rpx;
  background-color: #fff;
  border-radius: 0 0 30rpx 30rpx;
}

.member-type {
  padding: 40rpx 0 10rpx 0;
  text-align: center;
  color: #454545;
  font-size: 36rpx;
}


.member-module-name {
  padding: 0 0 22rpx 0;
  text-align: center;
  color: #454545;
  font-size: 36rpx;
}

.member-desc {
  padding: 0 0 60rpx 0;
  text-align: center;
  color: #333333;
  font-size: 28rpx;
}

.btn-sure {
  margin: 0 auto 60rpx;
  width: 520rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 36rpx;
  text-align: center;
  border-radius: 50rpx;
  color: #333333;
  background: #FFDC5E;
}


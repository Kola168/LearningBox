/* pages/package_preschool/list/index.wxss */
.list-block{
    padding: 0rpx 30rpx 0rpx;
}
.tabs{
    width:100%;
    display: flex;
    font-size: 32rpx;
    color: #999999;
}
.tab-item{
    justify-content: flex-start;
    align-items: baseline;
    width:25%;
    text-align: center;
}
.tab-on{
    font-size: 42rpx;
    color: #333333;
    line-height:38rpx;
    position: relative;
}
.tab-on::after{
    position: absolute;
    content:'';
    width:40rpx;
    height:8rpx;
    background:#FFA200;
    border-radius: 8rpx;
    left:50%;
    bottom: -20rpx;
    transform: translateX(-50%);
}
.tab-content{
    margin-top:60rpx;
}
.item-cont{
    width:100%;
    display: flex;
    justify-content: space-between;
    margin-bottom:50rpx;
}
.item-left{
    margin-right:3%;
    width:200rpx;
    height:200rpx;
}
.item-img{
    width:200rpx;
    height:200rpx;
    border-radius: 12rpx;
    /* background-color:#FFDC5E; */
}
.item-right{
    width: calc(100% - 230rpx)
}
.item-right-top{
   text-align: left; 
}
.item-title{
    color: #333333;
    font-size: 30rpx;
    margin:10rpx 0rpx;
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    align-content: flex-start;
    align-items: flex-start;
}
.item-desc, .item-tag, .btn-primary, .progress-num{
    font-size: 24rpx;
}
.item-desc{
    color: #666666;
    margin-bottom: 10rpx;
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.item-tag, .progress-num{
    color: #999999;
}
/* .item-title, .item-desc, .item-tag{
    height: 38rpx;
    line-height: 38rpx;
    overflow: hidden;
} */
.item-right-bottom{
    margin-top: 15rpx;
    display: flex;
    justify-content: space-between;
    width: 100%;
}
.progress-cont{
    width:68%;
    margin-top:20rpx;
}
.bottom-left{
    width:65%;
    /* display: flex; */
    justify-content: space-between;
}
.bottom-right, .bottom-right-no{
    width:35%;
    text-align: center;
}
.bottom-right-no{
    width:32%;
}
.item-right-bottom .btn-primary{
    background: #FFDC5E;
    color: #333333;
    border-radius: 40rpx;
    padding: 10rpx 35rpx;
}
.item-right-bottom .btn-default{
    font-size: 24rpx;
    color: #999999;
    border: 2rpx solid #CECECE;
    padding: 10rpx 0rpx;
    border-radius: 40rpx;
}
.item-none{
    margin-top:230rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.item-none-desc{
    font-size: 32rpx;
    color: #666666;
    margin:36rpx 0rpx 60rpx;
}
.item-none-img{
    width:240rpx;
    height:144rpx;
}
.item-none .btn-default{
    font-size: 36rpx;
    color: #999999;
    border: 2rpx solid #CECECE;
    padding: 16rpx 80rpx;
    border-radius: 40rpx;
    width:20%;
}

.progress {
    display: flex;
    align-items: center;
    /* justify-content: space-between; */
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    letter-spacing: 0;
    margin-top: 15rpx;
  }
  
  .progress>progress {
    width: 75%;
    margin-right: 20rpx;
  }
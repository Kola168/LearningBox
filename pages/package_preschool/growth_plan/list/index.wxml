                    </view>
                    <view class="item-right-bottom">
                        <view class="bottom-left"></view>
                        <view class="bottom-right">
                            <view class="btn-primary" bindtap="toSubscribe" id="{{item.id}}">订阅</view>
                        </view>
                    </view>
                </view>
            </view>

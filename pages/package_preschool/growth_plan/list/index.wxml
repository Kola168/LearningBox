    <view class="tabs">
        <view class="tab-item {{tabToContent==0 ? 'tab-on' : ''}}" id="0" bindtap="navTap">已订阅</view>
        <view class="tab-item {{tabToContent==1 ? 'tab-on' : ''}}" id="1" bindtap="navTap">未订阅</view>
        <view class="tab-item {{tabToContent==2 ? 'tab-on' : ''}}" id="2" bindtap="navTap">已完成</view>
    </view>
    <view class="tab-content">
    <!-- 已订阅 开始 -->
        <view class="item-cont-block" wx:if="{{tabToContent==0}}">
            <block wx:if="{{!lists.length}}">
                <view class="item-none">
                    <image mode="widthFix" class="item-none-img" src="https://cdn-h.gongfudou.com/LearningBox/preschool/growth_plan_none.png" mode="widthFix"></image>
                    <text class="item-none-desc">您还未订阅宝宝成长计划哦～</text>
                    <view class="btn-default" bindtap="toSubscribe">去订阅</view>
                </view>
            </block>
            <view class="item-cont" wx:for="{{lists}}" wx:key="index" id="{{index}}">
                <view class="item-left">
                    <image class="item-img" src="{{item.image}}"></image>
                </view>
                <view class="item-right">
                    <view class="item-right-top">
                        <view class="item-title">{{item.title}}</view>
                        <view class="item-desc">{{item.desc}}</view>
                        <view class="item-tag">{{item.tag}}</view>
                    </view>
                    <view class="item-right-bottom">
                        <view class="bottom-left">
                            <view class="progress-cont">
                                <view class="progress" style="width:{{item.allProgress}}%;"></view>
                                <view class="progress-on" style="width:{{item.currentProgress}}%;"></view>
                            </view>
                            <text class="progress-num">{{item.currentProgress}}/{{item.allProgress}}</text>
                        </view>
                        <view class="bottom-right bottom-right-no">
                            <view class="btn-default" id="{{index}}" bindtap="handleSubscribe">取消订阅</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    <!-- 已订阅 结束 -->
    <!-- 未订阅 开始 -->
        <!--<view class="item-cont-block" wx:if="{{tabToContent==1}}">-->

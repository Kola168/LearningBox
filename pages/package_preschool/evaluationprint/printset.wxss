/* pages/package_preschool/evaluationprint/printset.wxss */
@import "../../../common/icon/icon";

page{
  padding:0 24rpx;
  box-sizing:border-box;
}

.setting-item{
  width:100%;
  height:100rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
  border-bottom:1rpx solid #f4f4f4;
}

.setting-name{
  font-size: 32rpx;
  color: #333333;
}

.setting-value{
  display:flex;
  align-items:center;
}

.iconfont{
  font-weight:600;
  font-size:50rpx;
  color: #FFDC5E;
}

.print-num{
  width:72rpx;
  font-size: 32rpx;
  color: #666666;
  text-align:center;
}

.color-gray{
  color: #CECECE;
}

.color-name{
  margin-left:30rpx;
  font-size: 28rpx;
  color: #666666;
  display:flex;
  align-items:center;
}

.color-circle{
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  border:2rpx solid #cecece;
  margin-left:16rpx;
}

.color-checked{
  border:2rpx solid #ffdc5e;
  display:flex;
  align-items:center;
  justify-content:center;
}

.color-checked:after{
  content:"";
  width:28rpx;
  height:28rpx;
  border-radius:50%;
  background:#ffdc5e;
}

.conf-button{
  width:700rpx;
  line-height:100rpx;
  border-radius:50rpx;
  background: #FFDC5E;
  font-size: 36rpx;
  color: #333333;
  text-align:center;
  position:fixed;
  bottom:40rpx;
  left:25rpx;
}

.cover-button{
  position:absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
  opacity:0;
}

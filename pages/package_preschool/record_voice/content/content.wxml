<nav-bar background="#fff" title="童音录制" />
<view class="tabs" style="top:{{top}}px;">
	<scroll-view
	 scroll-x="true"
	 class="type"
	 scroll-with-animation
	 scroll-into-view="{{'_'+tabId}}"
	>
		<text wx:for="{{catesList}}"
          wx:key="{{index}}" id="{{'_'+index}}"
          class="tab-item {{tabId == index ? 'activeType' : ''}}"
          bindtap="changeTab"
    >{{item.name}}<text class="active-border"></text>
		</text>
	</scroll-view>
	<view class="see-all" bindtap="openCategory">
		<image src="/images/doc_arrow_bottom_gray_6.png" mode="widthFix" />
	</view>
</view>

<block wx:for="{{playList}}" wx:key="{{index}}">
	<view class="item-3" bindtap='playPreview' data-index="{{index}}">
		<image src='{{item.icon_url}}' class='url-3' mode="aspectFill">
			<!-- <image
        src='{{item.discount_url}}'
        mode="widthFix"
        wx:if="{{item.discount_url&&isMember}}"
        class="url-3-free"
      /> -->
			<!-- <image
        src='{{item.non_vip_discount_url}}'
        mode="widthFix"
        wx:if="{{item.non_vip_discount_url&&!isMember}}"
        class="url-3-free"
      /> -->
		</image>
		<view class='title-3'>{{item.title}}</view>
		<view class='print print-3'>
			<view>
				<image src='../../images/printicon.png' class='print_icon' mode='widthFix' />
				<text class='print_num'>{{item.print_count}}</text>
			</view>
			<view class="pages">共{{item.total_page}}页</view>
		</view>
	</view>
</block>
<view
 class="cates-modal"
 wx:if="{{showCatesModal}}"
 bindtap="closeCategory"
 style="top:{{top}}px;"
>
  <view catchtap="back">
    <view
      class="tab-list"
      wx:for="{{catesList}}"
      wx:key="{{index}}"
      id="{{'_'+index}}"
    >
      <text id="{{'_'+index}}" class="tab-item {{tabId == index ? 'activeType' : ''}}"
                catchtap="changeTab">{{item.name}}<text class="active-border"></text>
      </text>
    </view>
  </view>
</view>
<import src="../../../../lib/toast/wetoast.wxml" />
<template is="wetoast" data="{{...__wetoast__}}" />


/* pages/package_feature/evaluation/choosegrade.wxss */
@import "../../../common/icon/icon";

page {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

view {
  box-sizing: border-box;
}

.top-bg {
  width: 100%;
  position: relative;
  margin-bottom: 50rpx;
}

.text-box {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  font-size: 28rpx;
  margin-top: 70rpx;
  margin-left: 40rpx;
}

.text-box-title {
  font-size: 44rpx;
  margin-bottom: 6rpx;
}

.grade-box {
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  display: flex;
  align-items: center;
}

.grade-name {
  margin-right: 16rpx;
}

.icon-show-more {
  font-size: 38rpx;
}

.text-paper-box {
  width: 700rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 8px 0 rgba(204, 204, 204, 0.40);
  border-radius: 20rpx;
  display: flex;
  padding: 44rpx 24rpx;
  margin-bottom: 30rpx;
}

.text-paper-img {
  width: 140rpx;
}

.text-content-box {
  flex: 1;
  height:100%;
  margin-left: 20rpx;
}

.content-top-box {
  width: 100%;
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.content-title{
  width:460rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size:30rpx;
  margin-top:12rpx;
}

.icon-next {
  align-self: flex-end;
}

.content-desc-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.content-no-test {
  font-size: 28rpx;
  color: #999999;
}

.content-test-box {
  font-size: 28rpx;
  color: #FFA200;
  display: flex;
}

.content-test-img {
  width: 32rpx;
  margin-right: 10rpx;
}

.grade-list-box{

}

.scroll-list-box{
  width:100%;
  max-height:308rpx;
  position:absolute;
  z-index:1;
  top:42rpx;
  left:0;
  border: 1px solid #E7E7E7;
  border-top:1px solid #fff;
  border-bottom-left-radius: 6px;
  border-bottom-right-radius: 6px;
  padding-top:10rpx;
  overflow:scroll;
  background:#fff;
}

.scroll-list{
  width:100%;
  height:72rpx;
  background:#fff;
  font-size: 28rpx;
  color: #333333;
  padding:16rpx 22rpx;
}

.scroll-list-checked{
  background: #FFF8E0;
}

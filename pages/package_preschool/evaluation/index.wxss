/* pages/package_feature/evaluation/index.wxss */
page {
  width: 100%;
  min-height: 100%;
  background: #4CBAFF;
  display: flex;
  flex-direction: column;
  align-items: center;

  padding-bottom: 60rpx;
  box-sizing: border-box;
}

view{
  box-sizing:border-box;
}

.common_bg {
  width: 680rpx;
  position: relative;
  margin-top: 52rpx;
}

.bottom-button {
  width: 600rpx;
  margin-top: 40rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 18px;
  color: #333333;
  background: #FFDC5E;
  box-shadow: 0 2px 0 0 #CEA100;
  border-radius: 50rpx;
}

.cover-box {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text-box {
  width: 100%;
  font-size: 28rpx;
  color: #151515;
  letter-spacing: 0;
  line-height: 26px;
  padding-top:68rpx;
  padding-left:42rpx;
}

.head-text{
  color: #0680CC;
  font-size: 36rpx;
}

.process-img {
  width: 300rpx;
  margin-top: 96rpx;
}

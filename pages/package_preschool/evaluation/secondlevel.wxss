/* pages/package_preschool/evaluation/secondlevel.wxss */
page {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:30rpx;
}

view {
  box-sizing: border-box;
}

.text-paper-box {
  width: 700rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 8px 0 rgba(204, 204, 204, 0.40);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  padding: 44rpx 24rpx;
  margin-bottom: 30rpx;
}

.text-paper-img {
  width: 140rpx;
}

.text-content-box {
  flex: 1;
  margin-left: 20rpx;
}

.content-top-box {
  width: 100%;
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.content-title{
  width:310rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height:90rpx;
}

.icon-next {
  align-self: flex-end;
}

.content-desc-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.content-no-test {
  font-size: 28rpx;
  color: #999999;
}

.content-test-box {
  font-size: 28rpx;
  color: #FFA200;
  display: flex;
}

.content-test-img {
  width: 32rpx;
  margin-right: 10rpx;
}

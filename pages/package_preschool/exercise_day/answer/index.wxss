.answer-main {
  padding: 70rpx 0 60rpx;
  height: 100vh;
  background-color: #FEEECA;
}

.answer-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0rpx 48rpx  0rpx;
  height: calc( 100vh - 448rpx );
}

.btn {
  margin: 80rpx 84rpx 0;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  border-radius: 50rpx;
  color: #FFFFFF;
  background: #905C74;
}

.bottom-but {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
  z-index: 10;
}

.btn-main {
  width: 100%;
  height: 200rpx;
  position: relative;
}


swiper {
  border-radius: 20rpx;
  box-shadow: 0 0 34rpx 0 rgba(144,92,116,0.31);
}

swiper-item{
  border-radius: 20rpx;
}

.swiper-img {
  border-radius: 20rpx;
}
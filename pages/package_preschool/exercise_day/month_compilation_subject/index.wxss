/* pages/package_preschool/exercise_day/month_compilation_subject/index.wxss */

.header-icon {
  width:100%;
  position: relative;
}

.nav-content {
  position: absolute;
  left: 0;
  top: 0;
  padding: 0 0 0 42rpx;
  width: 50%;
  height: 100%;
}

.nav-content .title {
  padding: 40rpx 0 10rpx 0;
  font-size: 29rpx;
  color: #FF784A;
}

.nav-content .month {
  font-weight: 500;
  font-size: 58rpx;
  padding-bottom: 10rpx;
  color: #FF784A;
}

.nav-content .guide-title {
  font-size: 28rpx;
  color:#666666;
}

.card-list {
  width: 100%;
  padding: 10rpx 21rpx 0;
  box-sizing: border-box;
}

.card-item {
  display: inline-block;
  margin: 30rpx 30rpx 0 0;
  width: calc( ( 100% - 60rpx ) / 3 );
  font-size: 30rpx;
  color: #333333;
}

.card-item:nth-child(3n) {
  margin-right: 0;
}


.card-item:first-child {
  margin-right: 30rpx;
}

.card-item image {
  position: relative;
  margin-bottom: 14rpx;
  width: 100%;
  height: 284rpx;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
}

.card-tag {
  position: absolute;
  top: 0;
  right: 0;
  width: 82rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 0 20rpx 0 20rpx;
  text-align: center;
  font-size: 20rpx;
  color: #FFF;
  background-color: #4FB526;
}

.card-item .card-month-title {
  text-align: center;
}
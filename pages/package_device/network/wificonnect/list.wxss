/* pages/network/wificonnect/list.wxss */
page {
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

view {
  box-sizing: border-box;
}

.wifilist-box {
  width: 100%;
  padding-bottom: 160rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.wifilist-tips {
  font-size: 36rpx;
  color: #333;
  margin: 40rpx 0;
  width: 100%;
  text-align: center;
}

.wifilist {
  padding: 30rpx 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #333;
  justify-content: space-between;
}

.wifi-name {
  width:400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nowifi-tips {
  font-size: 36rpx;
  color: #333;
  margin-top: 200rpx;
  width: 100%;
  text-align: center;
}

.refresh-icon{
	position: fixed;
	bottom:80rpx;
	right:50rpx;
	width: 150rpx;
}

.signal{
	width: 36rpx;
}

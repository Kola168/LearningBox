Page {
    width: 100%;
    height: 100%;
}

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.top-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.top-content .icon-success {
    width: 100rpx;
    margin-top: 40rpx;
}

.top-content .setting-success {
    font-size: 34rpx;
    color: #333333;
    margin-top: 40rpx;
}

.top-content .bind-success {
    font-size: 32rpx;
    color: #666666;
    margin-top: 10rpx;
}

.top-content .box {
    width: 250rpx;
    margin-top: 40rpx;
}

.start {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #ffe27a;
    width: 260rpx;
    border-radius: 100rpx;
    font-size: 32rpx;
    color: #333333;
    height: 86rpx;
}

.share-to-friends {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #ffffff;
    border: 2rpx solid #8d8d8d;
    width: 260rpx;
    height: 86rpx;
    border-radius: 100rpx;
}

.button-text {
    font-size: 32rpx;
    color: #929292;
}

.box-tip {
    font-size: 32rpx;
    color: #666666;
    width: calc(100%-60rpx);
    margin: 0 30rpx;
    line-height: 1.6;
    margin-top: 60rpx;
}

.box-tip view {
    position: relative;
}

.tip {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    margin-top: 60rpx;
}

.tip .short-line {
    width: 110rpx;
    height: 4rpx;
    background: #666666;
}

.tip text {
    font-size: 32rpx;
    columns: #666666;
    padding: 0 40rpx;
}

.medium {
    display: flex;
    flex-direction: row;
    width: calc(100%-40rpx);
    align-items: center;
    justify-content: space-between;
    margin: 40rpx 20rpx 0 20rpx;
    background: #f9f9f9;
    padding: 60rpx 50rpx;
}

.medium-item {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.medium-image {
    width: 90rpx;
}

.desc {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.title {
    font-size: 34rpx;
    color: #454545;
}

.content {
    font-size: 30rpx;
    color: #a5a5a5;
    margin-top: 10rpx;
}

.experience {
    padding: 10rpx 30rpx;
    border-radius: 10rpx;
    background: #ffe27a;
    font-size: 32rpx;
    color: #333333;
}

.bottom-height {
    margin-bottom: 20rpx;
}

.two-button {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    width: 80%;
    justify-content: space-between;
    align-items: center;
    margin-top: 50rpx;
}

.line {
  width: 100%;
  height: 12rpx;
  background: #FFEAE8;
  position: absolute;
  bottom: 18rpx;
  z-index: -1;
}
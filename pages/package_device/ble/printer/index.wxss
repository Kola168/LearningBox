.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
}

.step {
    width: 50%;
    margin-top: 20rpx;
}

.title {
    font-size: 36rpx;
    color: #333;
    margin-top: 40rpx;
}

.search-equipment {
    width: 90%;
    padding: 10rpx 0;
    background-color: #ffe27a;
    font-size: 32rpx;
    color: #333333;
    margin-top: 150rpx;
    border-radius: 1000rpx;
}

.box-image {
    width: 60%;
    margin-top: 150rpx;
}

.connect-power {
    display: flex;
    width: 100%;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 34rpx;
}

.connect-power text {
    font-size: 28rpx;
    color: #ffa200;
}
Page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-x: hidden;
}

.title {
    color: #333333;
    font-size: 36rpx;
    margin-top: 30rpx;
}

.notify {
    width: 100%;
    margin: 20rpx 0 0 20rpx;
}

.notify text {
    color: #a4a4a4;
    font-size: 30rpx;
}

.device-list {
    width: 100%;
    margin-top: 20rpx;
}

.device-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 20rpx;
    margin: 0 20rpx;
    border-bottom: #f5f5f5 solid 2rpx;
}

.device-item text {
    color: #333333;
    font-size: 36rpx;
}

.arrow-image {
    width: 30rpx;
    margin-left: 20rpx;
}

.device-item-right {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 150rpx;
}

.device-item-right .manage {
    width: 120rpx;
    background: #ffe27a;
    color: #333333;
    border-radius: 8rpx;
    font-size: 30rpx;
    text-align: center;
    padding: 4rpx 0;
}

.serach-device-serial {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 12rpx;
}

.serach-device-serial text {
    font-size: 28rpx;
    color: #ffa200;
    margin-left: 6rpx;
}

.serach-device-serial image {
    width: 30rpx;
}
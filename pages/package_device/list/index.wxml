<nav-bar title="我的设备"></nav-bar>
<view class="container">
  <view class="device-active">
    <view>当前设备</view>
    <view class="device-item device-item-active">
      <view class="item-left" bindtap="toSetting">
        <view class="left-img">
          <image src="../images/{{activeDevice.model==='3115'?'L3115':'EP400'}}.png" mode="widthFix" />
        </view>
        <view class="left-name text-overflow-points active-name-box">
          <view>{{activeDevice.name}}</view>
          <view class="device-active-status online-active-status">
            <view class="status-flag {{activeDevice.onlineState==='no'?'online-status':''}}"></view>
            <view>{{activeDevice.onlineState==='no'?'在线':'离线'}}</view>
          </view>
        </view>
      </view>
      <view class="item-right">
        <view class="right-btn" bindtap="toShare" data-sn="{{activeDevice.sn}}">分享</view>
        <view class="right-arrow">
          <image src="../images/arrow_right.png" />
        </view>
      </view>
    </view>
  </view>
  <view class="device-list">
    <view>设备列表</view>
    <view class="device-item" wx:for="{{devices}}" wx:key="sn">
      <view class="item-left" wx:if="{{!item.selected}}" bindtap="toSetting" data-sn="{{item.sn}}">
        <view class="left-img">
          <image src="../images/{{item.model==='3115'?'L3115':'EP400'}}.png" mode="widthFix" />
        </view>
        <view class="left-name text-overflow-points">{{item.name}}</view>
      </view>
      <view class="item-right">
        <view class="right-btn" bindtap="switchActiveDevice" data-sn="{{item.sn}}">切换</view>
        <view class="right-arrow">
          <image src="../images/arrow_right.png" />
        </view>
      </view>
    </view>

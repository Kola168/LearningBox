/* pages/error_book/pages/course/share_course/share_course.wxss */
page {
    background-color: #F5F5F5;
}


.sys-flex {
    display: flex;
    display: -webkit-flex;
}

.f-12 {
    font-size: 24rpx;
}

.f-14 {
    font-size: 28rpx;
}

.f-16 {
    font-size: 32rpx;
}

.share-container {
    width: 100%;
}

.share-activity-img {
    margin-top: 20rpx;
    width: 100%;
    padding: 40rpx 22rpx 0 22rpx;
    box-sizing: border-box;
    background-color: #FFF;
    min-height: 500rpx;
}

/* share-main-info */
.share-main-info {
    padding: 30rpx 24rpx;
    background-color: #FFF;
    text-align: center;
}


.share-icon {
    width: 100%;
    position: relative;
}

.share-box {
    position: absolute;
    left: 24rpx;
    top: 560rpx;
    padding: 30rpx;
    width: calc( 100% - 48rpx );
    border-radius: 20rpx;
    background-color: #fff;
    box-sizing: border-box;
    box-shadow: 0 10rpx 16rpx 0  rgba(0,0,0,0.06);
}

.share-wrap-box {
    padding-bottom: 30rpx;
}

.share-wrap-box .course-icon {
    margin-right: 24rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;    
}

.share-wrap-box .course-desc {
    margin-bottom: 8rpx;
    color: #333;
}

.share-wrap-box .style-process {
    margin-bottom: 30rpx;
    color: #666;
}

.share-wrap-box .course-price {
    justify-content: flex-end;
}

.share-wrap-box .origin-price {
    margin-right: 40rpx;
    color: #666;
}

.course-price image {
    width: 80rpx;
    margin-right: 23rpx;
}

.share-wrap-box .discount-price {
    font-size: 40rpx;
    color: #FB5130;
}

.assistance-box {
    flex-direction: column;
    align-items: center;
    margin-top: 16rpx;
}


.assistance-state {
    margin: 0 auto 8rpx;
    color: #FF8051;
}

.assistance-time {
    margin: 0 auto 40rpx;
    color: #FF8051;
}

.assistance-box .btn {
    width: 436rpx;
    color: #FFFFFF;
}

.assistance-num-title {
    margin: 40rpx 0 24rpx 0;
    color: #999999;
}

.price-text-line {
    color: #666666;
    text-decoration: line-through;
}

.course-label {
    width: 102rpx;
    height: 34rpx;
    line-height: 34rpx;
    margin-left: 41rpx;
}

.course-label-card {
    border-radius: 16rpx 0 16rpx 0;
    background-image: linear-gradient(to right, #FD5835, #FB284D);
    text-align: center;
    font-size: 20rpx;
    color: #FFF;
}

.course-r-info .discount-price {
    font-size: 40rpx;
    color: #FF4241;
    margin-left: 21rpx;
}

.share-user-avatar {
    display: flex;
    height: 60rpx;
}

.share-user-avatar image {
    margin-right: 20rpx;
    width: 64rpx;
    height: 64rpx;
    border-radius: 64rpx;
}




button {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    font-size: 38rpx;
    padding: 0;
    color: #fff;
}

.btn-hover {
    background: none;
}



.btn-learn {
    background-color: #014961;
    box-shadow: 0 2px 8px 0 rgba(1,73,97,0.68);
}

.btn-assistance {
    background-color: #FE8050;
    box-shadow: 0 2px 8px 0 rgba(254,128,80,0.68);
}



.button-hover {
    transform: scale(0.98);
}

.back_index {
    position: fixed;
    left: 0;
    top: 40rpx;
    display: flex;
    align-items: center;
    height: 60rpx;
    padding: 0 24rpx 0 12rpx;
    font-size: 30rpx;
    color: #fff;
    background: #747474;
    border-top-right-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
}
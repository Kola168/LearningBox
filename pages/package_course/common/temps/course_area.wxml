
<wxs src="../wxs/utils.wxs" module="utils" />
<template name="collectVipInfo">
    <block>
        <view class="course-descrtion">共{{item.totalLessons}}课时/{{item.studyUsers}}人已参与</view>
        <block wx:if="{{!item.payed}}">
            <!-- android plat start-->
            <view class="course-price sys-flex" wx:if="{{is_android}}">
                <view class="origin-price f-12 price-text-line" wx:if="{{item.discount.discountType!=null&&item.discount.discountType!='non_free'}}">￥{{utils.fixPrice(item.discount.amountY)}}</view>
                <image class="course-label" wx:if="{{item.discountUrl&&item.discount.discountType!=null&&!isMember}}" src="{{item.discountUrl}}"/>
                <image class="course-label" wx:if="{{item.setVipDiscountAngle&&item.discount.discountType!=null&&isMember}}" src="{{item.setVipDiscountAngle}}"/>
                <view class="discount-price">￥{{utils.fixPrice(item.discount.priceY)}}</view>
            </view>
            <!-- android plat end -->
        </block>
    </block>
</template>



/* mine-list */

.mine-list {
    padding: 20rpx 0 20rpx;
    min-height: 70vh;
}

.mine-list .mine-item {
    margin-top: 40rpx;
    align-items: center;
}

.mine-list .mine-item image {
    margin-right: 24rpx;
    position: relative;
    width: 200rpx;
    height: 200rpx;
    flex-basis: auto;
    border-radius: 30rpx;
    background-color: #ebe4e4;
}

.mine-list .mine-item .free-tag {
    position: absolute;
    right: 0;
    top: 0;
    z-index: 10;
    width: 80rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    color: #FFF;
    border-radius: 0 30rpx 0 30rpx;
    background-color: #FC5337;
}

.content-info {
    flex-grow: 1;
    max-width: 80%;
}

.course-title {
    margin-bottom: 6rpx;
    color: #333333;
    font-weight: 500;
    text-overflow: ellipsis;
    /* white-space: nowrap; */
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.course-status {
    color: #4FB526;
    padding: 9rpx 0;
    line-height: 1;
}

/* 课程中间信息css */


.learn-progress {
    color: #666666;
    font-size: 28rpx;
}

.buy-time {
    margin-top: 12rpx;
    color: #666666;
    font-size: 24rpx;
}

/* 收藏中间信息css */

.course-descrtion {
    margin-top:6rpx;
    color: #666666;
    font-size: 28rpx;
}

.course-price {
    padding-top: 10rpx;
    align-items: center;
}

.course-price .origin-price {
   color: #FF4241;
}

.course-price .price-text-line {
    color: #666666;
    text-decoration: line-through;
 }

.course-price .course-label {
    width: 102rpx!important;
    height: 34rpx!important;
    border-radius: 0!important;
    background: none!important;
    line-height: 34rpx;
    margin-left: 41rpx;
}

.course-price .course-label-card {
    border-radius: 16rpx 0 16rpx 0;
    background-image: linear-gradient(to right, #FD5835, #FB284D);
    text-align: center;
    font-size: 20rpx;
    color: #FFF;
 }

.discount-price {
   font-size: 40rpx;
   color: #FF4241;
   margin: 8rpx 0 0 0;
}


.arrow-r {
    width: 10rpx;
    height: 10rpx;
    border: 2px solid transparent;
    border-right-color: #D8D8D8;
    border-bottom-color: #D8D8D8;
    transform: rotate(-45deg);
    transform-origin: 50% 50%;
}
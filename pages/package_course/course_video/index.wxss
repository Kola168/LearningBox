.container {
  min-height: 100%;
}

.back-index {
  position: fixed;
  left: 0;
  top: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 28rpx 0 24rpx;
  color: #fff;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  font-size: 30rpx;
  background: rgba(0, 0, 0, 0.5);
}

.bg {
  position: fixed;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  z-index: -1;
}

.video-info {
  padding: 160rpx 24rpx 100rpx 24rpx;
  color: #333;
  text-align: center;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
}

.info-sub {
  font-size: 28rpx;
  margin: 12rpx 0 30rpx;
}

video {
  width: 100%;
}

.video-tip {
  display: flex;
  justify-content: flex-end;
  padding: 0 24rpx;
}

.video-tip image {
  width: 60%;
}
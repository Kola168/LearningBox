/* pages/error_book/pages/course/pay_order/pay_order.wxss */
@import '/common/wxss/common.wxss';

.order-main {
    padding: 30rpx 24rpx 0;
}

.order-info .product-pic {
    margin-right: 24rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 30rpx;
    background-color: #e6e3e3;
}

.product-r-info {
    width: 65%;
    flex-basis: 1;
    flex-direction: column;
    justify-content: space-between;
}

.product-r-info .product-title {
    color: #333333;
    font-size: 32rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.product-r-info .product-price {
    align-items: center;
    justify-content: flex-end;
}

.product-price .origin-price {
    color: #FF4241;
 }

 .price-text-line {
    color: #666666!important;
    text-decoration: line-through;
 }


 .product-price .course-label {
    width: 102rpx;
    height: 34rpx;
    line-height: 34rpx;
    margin-left: 41rpx;
}

 .product-price .course-label-card {
    border-radius: 16rpx 0 16rpx 0;
    background-image: linear-gradient(to right, #FD5835, #FB284D);
    text-align: center;
    font-size: 20rpx;
    color: #FFF;
 }

 .product-price  .discount-price {
    font-size: 40rpx;
    color: #FF4241;
    margin-left: 21rpx;
 }

 .order-info {
     justify-content: space-between;
 }

 .order-detail {
     margin-top: 20rpx;
     color: #333333;
 }

 .detail-item {
     margin-top: 40rpx;
     align-items: center;
     justify-content: space-between;
     font-weight: 500;
 }

 .detail-r-info {
     max-width: 70%;
     overflow: hidden;
     text-overflow: ellipsis;
     white-space: nowrap;
 }


 form button {
    position: absolute;
    bottom: 200rpx;
    left: 24rpx;
    padding: 0;
    width: calc( 100% - 48rpx )!important;
    height: 98rpx;
    line-height: 98rpx;
    border-radius: 49rpx;
    background-color: #FFDC5E;
    font-size: 36rpx;
    color: #454545;
 }

 .button-hover {
     opacity: 0.9;
     background-color: #FFDC5E;
 }

 .discount-url-card {
     margin-left: 14rpx;
     width: 118rpx;
 }

 .print-bean-price {
     color: #FF5022;
 }

 .btn-switch {
     margin-left: 20rpx;
     width: 40rpx;
     height: 40rpx;
     border-radius: 40rpx;
 }


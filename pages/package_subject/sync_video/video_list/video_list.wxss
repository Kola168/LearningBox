/* pages/package_subject/sync_video/video_list/video_list.wxss */

.video-list {
  padding: 56rpx 24rpx 20rpx;
}

.video-list .video-item {
  margin: 0 22rpx 40rpx 0;
  display: inline-block;
  width: calc( (100% - 22rpx ) / 2 );
  font-size: 28rpx;
  color: #333333;
}

.video-list .video-item:nth-child(even) {
  margin-right: 0;
}

.video-list .video-name {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-break: break-all;
}

.video-list .video-cover-icon {
  position: relative;
  margin-bottom: 16rpx;
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: #ccc;
}

.video-list .btn-player {
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 20;
  margin: -31rpx 0 0 -31rpx;
  width: 62rpx;
  height: 62rpx;
}

.video-list .video-in-box {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0 16rpx;
  display: flex;
  align-items: center;
  
  justify-content: space-between;
  width: 100%;
  height: 50rpx;
  box-sizing: border-box;
  font-size: 20rpx;
  color: #FFFFFF;
}

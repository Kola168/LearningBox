.atlas-bar {
  width: 100%;
}

.bar-title {
  color: #333;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.main-left,
.bar-main {
  display: flex;
}

.bar-main {
  height: 400rpx;
  width: calc(100% - 60rpx);
  margin: 32rpx 0 0 60rpx;
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
}

.main-line {
  position: absolute;
  left: 0;
  width: 100%;
  border-top: 2rpx dashed #E7E7E7;

}

.line-rate {
  position: absolute;
  left: -52rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.main-item {
  background: #66A6ED;
  width: 52rpx;
  height: 60%;
  position: relative;
}

.main-item>view {
  position: absolute;
  bottom: -60rpx;
  left: 50%;
  width: 120rpx;
  transform: translateX(-50%);
  text-align: center;
  font-size: 28rpx;
  color: #333;
}
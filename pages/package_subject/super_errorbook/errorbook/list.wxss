.container {
  position: relative;
}

/* 未开通会员 */
.not-member-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFF8E0;
  color: #FFA200;
  font-size: 24rpx;
  padding: 4rpx 0;
}

.not-member-tip image {
  width: 24rpx;
  margin-right: 10rpx;
}

.not-member-content {
  padding-top: 260rpx;
}

.not-member-content image {
  width: 240rpx;
  margin: 0 auto;
}

.content-text {
  color: #333;
  font-size: 32rpx;
  margin: 36rpx 0 60rpx;
  text-align: center;
}

.not-member-btn {
  color: #333;
  font-size: 36rpx;
  width: 280rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: #FFDC5E;
  margin: 0 auto;
}

/* 弹窗按钮 */
.member-btn {
  display: flex;
  height: 88rpx;
  color: #454545;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background: #FFDC5E;
}

.member-btn image {
  width: 40rpx !important;
  margin: 0 12rpx 0 0 !important;
}

/* 已开通会员 */
/* 空页面 */

.empty {
  padding: 320rpx 120rpx 0;
}

.empty image {
  width: 40%;
  margin: 0 auto;
}

.empty-tip {
  color: #666;
  font-size: 32rpx;
  padding: 30rpx 0 20rpx;
  text-align: center;
}

.empty-content {
  color: #999;
  font-size: 28rpx;
}

.handle-btns,
.item-type,
.knowledge-left,
.item-knowledge,
.select-btn,
.title-select,
.content-title,
.date-item-box,
.tab-bar,
.bar-item {
  display: flex;
  align-items: center;
}

.tab-bar {
  font-size: 26rpx;
  color: #666;
  padding: 0 24rpx;
  height: 50px;
  background: #fff;
  position: fixed;
  left: 0;
  width: 100%;
  box-sizing: border-box;
}

.bar-item {
  width: 25%;
  justify-content: center;
}

.bar-item:first-child {
  justify-content: flex-start;
}

.bar-item image {
  width: 16rpx;
  margin-left: 12rpx;
}

.bar-date-item {
  justify-content: flex-end;
}

.date-item-box {
  background: #f7f7f7;
  height: 48rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #999;
  padding: 0 12rpx;
}

.date-item-box image:first-child {
  width: 24rpx;
}

.date-item-box image:last-child {
  width: 10rpx;
}

/* 选择弹出层 */
.filter {
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  height: 100%;
  width: 100%;
}

.filter-box {
  background: #fff;
  padding: 0 24rpx;
  max-height: 420rpx;
  overflow: scroll;
}

.filter-item {
  padding-bottom: 30rpx;
  color: #333;
  font-size: 30rpx;
}

.list-content {
  padding: 50px 24rpx 140rpx;

}

.content-title {
  justify-content: space-between;
  font-size: 30rpx;
  color: #666;
  padding: 36rpx 0 30rpx;
}

.title-select image {
  width: 28rpx;
  margin-right: 10rpx;
}

.select-btn {
  color: #333;
  font-size: 24rpx;
}

.select-btn view {
  background: #FFDC5E;
  margin-left: 20rpx;
  border-radius: 12rpx;
  padding: 4rpx 10rpx;
}

.content-item {
  background: #fff;
  margin-bottom: 40rpx;
}

.item-top {
  padding: 24rpx 24rpx 36rpx;
  border-bottom: 2rpx solid #e7e7e7;
  font-size: 26rpx;
  color: #333;
  line-height: 48rpx;
}

.item-top>view {
  padding: 0 24rpx;
}

.item-top image {
  width: 34rpx;
  margin-bottom: 24rpx;
}

.item-bottom {
  padding: 40rpx 24rpx;
}

.item-knowledge {
  justify-content: space-between;
}

.item-knowledge>image {
  width: 12rpx;
}

.knowledge-left {
  width: calc(100% - 32rpx);
  font-size: 30rpx;
  color: #333;
}

.list-item {
  display: inline-block;
  color: #FB5130;
  font-size: 24rpx;
  background: #FFEEF1;
  border-radius: 4rpx;
  margin-right: 20rpx;
  padding: 4rpx 10rpx;
}

.item-type {
  margin-top: 10rpx;
  justify-content: space-between;
}

.type-text {
  display: inline-block;
  color: #999;
  font-size: 20rpx;
  border: 2rpx solid #cecece;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
}

.item-date {
  color: #666;
  font-size: 24rpx;
}

.handle-btns {
  background: #fff;
  height: 100rpx;
  border-top: 2rpx solid #e7e7e7;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  justify-content: space-around;
}

.handle-btns>view {
  height: 80rpx;
  line-height: 80rpx;
  background: #FFDC5E;
  border-radius: 12rpx;
  font-size: 34rpx;
  color: #333;
  padding: 0 12rpx;
}
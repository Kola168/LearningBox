.container {
  display: flex;
  flex-wrap: wrap;
  padding-top: 70rpx;
}

.subject-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.subject-item image {
  width: 50%;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  margin: 24rpx 0 10rpx;
}

.item-error-count {
  width: 60%;
  height: 36rpx;
  line-height: 36rpx;
  background: #FFEBE7;
  color: #FB5130;
  font-size: 20rpx;
  border-radius: 18rpx;
  text-align: center;
}
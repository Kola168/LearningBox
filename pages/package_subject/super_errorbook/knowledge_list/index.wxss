.container {
  padding: 80rpx 0;
}

.container image {
  width: 90%;
  margin: 0 auto;
}

.knowledge-title {
  margin: 40rpx 0 30rpx;
  text-align: center;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.knowledge-list {
  position: relative;
  width: calc(100% - 124rpx);
  padding-bottom: 12rpx;
  margin-left: 24rpx;
}

.final-precent {
  position: absolute;
  top: 0;
  right: -38rpx;
  font-size: 28rpx;
  color: #cecece;
  background: #fff;
}

.list-line {
  position: absolute;
  top: 0;
  height: 100%;
  border-left: 2rpx dashed #CECECE;
  z-index: -1;
}

.list-item:not(:last-child) {
  margin-bottom: 40rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.item-progress {
  position: relative;
  background: #C6DDF9;
  height: 24rpx;
  border-top-right-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}

.progress-text {
  position: absolute;
  color: #66A6ED;
  font-size: 28rpx;
  top: 50%;
  right: -84rpx;
  transform: translateY(-50%);
}
/* pages/package_subject/stage_report/index/index.wxss */

.nav-card {
  position: relative;
  margin: 60rpx auto;
  width: 700rpx;
}

.content {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 100%;
  font-size: 24rpx;
  transform: translate(-50%, -50%);
  text-align: center;
  font-weight: 500;
  color: #FFA200;
}

.notice-text {
  padding: 40rpx 24rpx 30rpx 24rpx;
  font-size: 24rpx;
  color: #FFA200;
}



/* 搜索 */

.exercise-search {
  margin-top: 30rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
}

.exercise-search .search-item {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.exercise-search .search-category-name {
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666666;
}

.exercise-search .search-time {
  display: flex;
  align-items: center;
  padding: 0  20rpx;
  width: fit-content;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666666;
  border-radius: 40rpx;
  background-color: #f7f7f7;
}

.exercise-search .search-time image {
  margin-right: 10rpx;
  width: 30rpx;
  height: 30rpx;
}

.exercise-search .search-time .arrow {
  margin-left: 10rpx;
  width: 10rpx;
  height: 10rpx;
  border-top: 1px solid #333333;
  border-right: 1px solid #333333;
  transform: rotate(45deg);
}

.exercise-search .arrow-icon{
  margin-top: 10rpx;
  width: 0;
  height: 0;
  border-right: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  border-top: 10rpx solid #999999;
  border-bottom: 10rpx solid transparent;
}

/* 练习列表 */
.exercise-content {
  width: 100%;
  padding-bottom: 100rpx; 
}

@import '../../common//wxss//exercise_list.wxss';


/* 生成练习 */

.btn-convert {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333333;
  background-color: #FFDC5E;
}

/* 分类筛选器 */

.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  z-index: 100;
  width: 100%;
  height: calc( 100vh - 128rpx );
  background-color: rgba(0,0,0,0.60);
}

.current-subject {
  padding-left: 24rpx;
  display: flex;
  align-items: center;
  height: 90rpx;
  color: #FFA200;
  font-size: 26rpx;
  background-color: #fff;
}

.current-subject .arrow-icon {
  margin: 0 0 10rpx 24rpx;
  width: 0;
  height: 0;
  border-right: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid #FFA200;
}


.subject-main {
  background-color: #fff;
  padding-left: 24rpx;
  font-size: 30rpx;
  color: #333333;
  height: 500rpx;
  overflow: scroll;
}

.subject-main .subject-item {
  height: 100rpx;
  line-height: 100rpx;
}


/* 学科列表 */

.choose-subject {
  margin: 76rpx 52rpx;
}

/* 时间列表 */
.choose-date-range {
  padding: 0 26rpx;
}


/* 暂无报告 */

.empty-reporter {
  padding: 160rpx  76rpx 0;
}

.empty-reporter image {
  margin: 0 auto;
  width: 240rpx;
  height: 144rpx;
}

.empty-reporter .name {
  padding-top: 36rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666666;
}
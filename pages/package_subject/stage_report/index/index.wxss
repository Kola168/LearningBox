/* pages/package_subject/stage_report/index/index.wxss */

.nav-card {
  position: relative;
  margin: 60rpx auto;
  width: 700rpx;
}

.content {
  position: absolute;
  left: 0;
  top: 36rpx;
  padding-left: 174rpx;
  width: 60%;
  font-size: 24rpx;
  color: #FFA200;
}

.notice-text {
  padding: 40rpx 24rpx 30rpx 24rpx;
  color: #FFA200;
}



/* 搜索 */

.exercise-search {
  margin-top: 30rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
}

.exercise-search .search-item {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.exercise-search .search-category-name {
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666666;
}

.exercise-search .arrow-icon{
  margin-top: 10rpx;
  width: 0;
  height: 0;
  border-right: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  border-top: 10rpx solid #999999;
  border-bottom: 10rpx solid transparent;
}

/* 练习列表 */

.exercise-content {
  width: 100%;
}

.exercise-content .exercise-item {
  padding: 0 24rpx 0 24rpx;
  display: flex;
  align-items: center;
  height: 168rpx;
  border-bottom: 2rpx solid #E7E7E7;
}

.exercise-content .exercise-item:last-child{
  border: none!important;
}

.exercise-content .content-icon {
  margin-right: 36rpx;
  width: 60rpx;
  height: 72rpx;
}

.exercise-in-content {
  width: 70%;
}

.main-content {
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.main-content .name {
  margin-right: 20rpx;
  max-width: 80%;
  color: #333333;
  font-size: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-break: break-all;
}

.main-content .exercise-activity-icon {
  width: 48rpx;
  height: 28rpx;
  line-height: 28rpx;
  background-color: #f95231;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  border-radius: 20rpx 20rpx 20rpx 0;
}

.effect-content {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.effect-content image {
  margin-right: 8rpx;
  width: 26rpx;
  height: 26rpx;
}

.btn-print {
  width: 136rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333333;
  background: #FFDC5E;
  border-radius: 26rpx;
}


/* 生成练习 */

.btn-convert {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333333;
  background-color: #FFDC5E;
}

/* 分类筛选器 */

.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  z-index: 100;
  width: 100%;
  height: calc( 100vh - 128rpx );
  background-color: rgba(0,0,0,0.60);
}

.current-subject {
  padding-left: 24rpx;
  display: flex;
  align-items: center;
  height: 90rpx;
  color: #FFA200;
  font-size: 26rpx;
  background-color: #fff;
}

.current-subject .arrow-icon {
  margin: 0 0 10rpx 24rpx;
  width: 0;
  height: 0;
  border-right: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid #FFA200;
}


.subject-main {
  background-color: #fff;
  padding-left: 24rpx;
  font-size: 30rpx;
  color: #333333;
  height: 500rpx;
  overflow: scroll;
}

.subject-main .subject-item {
  height: 100rpx;
  line-height: 100rpx;
}

<nav-bar title="测评与考试"></nav-bar>
<view class="container">
  <view class="tip-img">
    <image src="../../images/temp_1.png" mode="widthFix" />
    <view>海量优质真题试卷，随心打印</view>
  </view>
  <view class="subjects">
    <view class="subject-item" wx:for="{{subjects}}" wx:key="subjectId" bindtap="toSubject" data-id="{{item.subjectId}}">
      <image src="{{item.iconUrl}}" mode="widthFix" />
      <view class="item-name">{{item.subjectName}}</view>
      <view class="item-count">共{{item.totalNumber}}套试卷</view>
    </view>
  </view>
</view>

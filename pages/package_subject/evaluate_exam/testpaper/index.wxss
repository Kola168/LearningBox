/* 版本选择 */

.filters {
  position: relative;
  width: 100%;
  display: flex;
  z-index: 1000;
  border-bottom: 20rpx solid #f7f7f7;
}

.filters-item {
  height: 50px;
  width: 50%;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  justify-content: center;
}

.filters-item view {
  max-width: 70%;
}

.filters-active {
  height: 50px;
  display: flex;
  width: 100%;
  align-items: center;
  font-size: 26rpx;
  color: #FFA200;
  padding-left: 24rpx;
}

.filters-active image,
.filters-item image {
  width: 18rpx;
  margin-left: 16rpx;
}

.filters-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  min-height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}

.filters-list {
  position: absolute;
  left: 0;
  padding: 0 24rpx;
  width: calc(100% - 48rpx);
  z-index: 600;
  background: #fff;
  max-height: 500rpx;
  overflow: scroll;
}

.list-box {
  font-size: 30rpx;
  color: #333;
  margin: 30rpx 0;
}

.filters-active-color {
  color: #FFA200;
}


/* tab切换 */

.papers-tab {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #666666;
  white-space: nowrap;
  width: calc(100% - 60rpx);
  margin: 0 30rpx;
}

.tab-box {
  display: flex;
  flex-wrap: nowrap;
  height: 90rpx;
  line-height: 90rpx;
}

.tab-item {
  display: inline-block;
  margin-right: 30rpx;
}

.tab-item-active {
  color: #FFA200;
  font-size: 34rpx;
  position: relative;
}

.tab-item-active::after {
  content: '';
  position: absolute;
  left: calc(50% - 14rpx);
  bottom: 0;
  width: 28rpx;
  height: 4rpx;
  background: #FFA200;
  border-radius: 2rpx;
}


/* 试卷列表 */

.item-img,
.item-text,
.text-count,
.list-item {
  display: flex;
}

.list-item {
  padding: 38rpx 0;
}

.list-item:not(:last-child) {
  border-bottom: 2rpx solid #E7E7E7;
}

.item-img {
  align-items: center;
  width: 64rpx;
  margin: 0 24rpx 0 30rpx;
  position: relative;
}

.item-printed {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 16rpx;
  text-align: center;
  color: #FFA200;
  background-color: #FFF8E0;
}

.item-img image {
  width: 100%;
}

.img-print-tag {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 100;
}

.item-text {
  width: calc(100% - 118rpx);
  justify-content: space-between;
  flex-direction: column;
  color: #333;
  font-size: 32rpx;
}

.text-count {
  align-items: center;
  color: #666;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.count-logo {
  width: 26rpx;
  margin-right: 10rpx;
}

.count-report {
  width: 140rpx;
  margin-left: 32rpx;
}

.empty {
  font-size: 28rpx;
  color: #666;
  padding-top: 160rpx;
  text-align: center;
}

.empty image {
  width: 240rpx;
  margin: 0 auto 32rpx;
}
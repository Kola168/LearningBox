<nav-bar title="测评与考试"></nav-bar>
<view class="container">
  <view class="filters">
    <block wx:if="{{showFilter}}">
      <view class="filters-active">
        <view>{{activeFilter.name}}</view>
        <image src="../../images/angle_top.png" mode="widthFix" />
      </view>
    </block>
    <block wx:else>
      <view class="filters-item" bindtap="showFilter" id="edition">
        <view>{{activeEdition.name}}</view>
        <image src="../../images/angle_bottom.png" mode="widthFix" />
      </view>
      <view class="filters-item" bindtap="showFilter" id="grade">
        <view>{{activeGrade.name}}</view>
        <image src="../../images/angle_bottom.png" mode="widthFix" />
      </view>
    </block>
    <view class="filters-cover" wx:if="{{showFilter}}" bindtap="showFilter" style="top:{{topBarHeight}}px;">
      <view class="filters-list">
        <view wx:for="{{editions}}" wx:key="sn" class="list-box {{activeEdition.sn==item.sn?'filters-active-color':''}}" bindtap="changeEdition" data-index="{{index}}">
          {{item.name}}
        </view>
      </view>
    </view>
  </view>
  <view class="papers">
    <scroll-view scroll-x="{{true}}" class="papers-tab" scroll-with-animation scroll-into-view="{{tabId}}">
      <view class="tab-box">
        <view wx:for="{{papersTypes}}" class="tab-item {{tabId==='tab_'+index?'tab-item-active':''}}" bindtap="changeType" wx:key="sn" data-sn="{{item.sn}}" id="{{'tab_'+index}}">
          {{item.name}}
        </view>
      </view>
    </scroll-view>
    <view class="papers-list">
      <view class="list-item" wx:for="{{[1,2,3,4,5]}}" wx:key="sn" bindtap="toDetail" data-sn="{{index}}">
        <view class="item-img">
          <image src="../../images/pdf_icon.png" mode="widthFix" />
        </view>
        <view class="item-text">
          <view class="text-title text-overflow-points">2019年上学期南师大附中第一次月考</view>
          <view class="text-count">
            <image class="count-logo" src="/images/doc_print_icon.png" mode="widthFix" />
            <view>1493位同学已学习</view>
            <image src="../../images/has_report.png" class="count-report" mode="widthFix" />
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

/* pages/package_subject/sync_learn/learn_content/index.wxss */

.content-main {
  width: 100%;
  overflow: hidden;
}

.content-main .tab-main {
  height: 74rpx;
  white-space: nowrap;
  padding-left: 36rpx;
}

.content-main .tab-item {
  display: inline-block;
  min-width: 100rpx;
  margin-right: 50rpx;
  width: fit-content;
  text-align: center;
}

.content-main .tab-name {
  color: #666;
  font-size: 32rpx;
}

.content-main .tab-line {
  margin: 20rpx auto 0;
  width: 28rpx;
  height: 4rpx;
  border-radius: 2rpx;
}

.content-main .active {
  color: #FFA200;
}

.active-line {
  background-color: #FFA200;
}

.notice-card {
  margin: 40rpx 24rpx 0 24rpx;
  position: relative;
  width: calc( 100% - 48rpx );
  height: 134rpx;
}

.notice-card .nav-text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 70%;
  height: 100%;
  line-height: 124rpx;
  color: #FFA200;
  font-size: 24rpx;
  padding-left: 27%;
}


.form-main {
  padding: 60rpx;
  min-height: 400rpx;
}

.choose-box {
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
}

.choose-box-show {
  position: fixed;
  left: 0;
  z-index: 100;
  height: calc( 100vh - 312rpx );
}

.current-input-value {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 24rpx;
  height: 100rpx;
  font-size: 26rpx;
  background-color: #fff;
}

.current-active {
  color: #FFA200;
}


.current-input-value  .version {
  margin-right: 20rpx;
}

.current-input-value .grade {
  margin-right: 16rpx;
}

.current-input-value .arrow-icon {
  margin-top: 10rpx;
  width: 0px;
  height: 0px;
  border-width: 12rpx;
  border-style: solid;
  border-color: #999999 transparent transparent transparent;
}

.current-input-value .arrow-active {
  margin-top: -10rpx;
  border-color: transparent  transparent #FFA200 transparent;
}

.select-bar {
  display: flex;
  width: 100%;
  height: 400rpx;
  background-color: #FFF;
}


.select-bar .left-select-content {
  width: 256rpx;
  height: 400rpx;
  overflow: scroll;
  padding: 0!important;
  -webkit-overflow-scrolling: touch;
}

.select-bar .select-item {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  color: #666666;
  font-size: 30rpx;
  box-sizing: border-box;
  border-left-width: 8rpx;
  border-left-style: solid;
  border-left-color: transparent;
  background-color: #F7F7F7;
}

.select-bar .select-active {
  background: #FFFFFF;
  border-left-color: #FFA200;
}

.right-select-content {
  padding: 0 20rpx;
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  overflow-y: scroll;
  align-content: flex-start;
}

.right-select-content .content-item {
  margin-left: 15px;
  width: fit-content;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  color: #666666;
}

.right-select-content .active-text {
  color: #FFA200;
}


.chapter-main {
  padding-left: 24rpx;
}

.touch-scroll-bar {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 88;
  width: 100%;
  height: 100vh;
  background-color: transparent;
}
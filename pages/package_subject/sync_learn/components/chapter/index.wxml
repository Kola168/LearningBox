<view class="chapter-main">
  <block wx:if="{{chapters.length}}">
     <view class="chapter-box" wx:for="{{chapters}}" wx:key="id">
      <view class="chapter-box-title" bind:tap="lookChapter" data-index="{{index}}">
        <image class="box-icon" src="../../../images/{{item.isUnfold ? 'btn_shrink.png' : 'btn_unfold.png'}}"></image>
        <view class="box-name">{{item.name}}</view>
      </view>
      <block wx:if="{{item.isUnfold}}">
        <view class="chapter-children-box" wx:for="{{item.children}}" wx:key="id" wx:for-item="contentItem" wx:for-index="contetIndex">
        <!-- {{contetIndex + 1}} . -->
          <view class="chapter-nav-head-title {{contentItem.children.length ? '' : 'chapter-min-box'}}"> {{contentItem.name}}</view>
          <view class="chapter-nav-content"  wx:for="{{contentItem.children}}" wx:key="id" wx:for-item="periodItem" wx:for-index="periodIndex">
            <view class="chapter-nav-content-title">
            <!-- {{contetIndex + 1}}.{{periodIndex+1}} -->
              <view class="content-left-name">{{periodItem.name}}</view>
              <image class="pre-learn-tag" src="../../../images/last_learn_tag.png" wx:if="{{periodItem.is_pre_learn}}"></image>
              <view class="arrow-icon" wx:if="{{!periodItem.children}}"></view>
            </view>
            <block wx:if="{{periodItem.children}}">
            <!-- {{contetIndex + 1}}.{{periodIndex+1}}.{{currentIndex+1}}  -->
              <view class="chapter-nav-child-content" wx:for="{{periodItem.children}}" wx:key="id" wx:for-item="currentItem" wx:for-index="currentIndex">
                <view class="child-content-title">{{currentItem.name}}</view>
                <view class="arrow-icon"></view>
              </view>
            </block>
          </view>
        </view>
      </block>
    </view>
  </block>
</view>
<import src="../../../../../lib/toast/wetoast.wxml" />
<template is="wetoast" data="{{...__wetoast__}}" />
.member-toast {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
}

.btn-sure {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 88rpx;
  border-radius: 0 0 10rpx 10rpx;
  background: #FFDC5E;
}

.btn-sure image {
  margin: 0!important;
  width:40rpx;
  height: 36rpx;
}
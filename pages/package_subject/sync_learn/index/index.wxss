/* pages/package_subject/sync_learn/index/index.wxss */

.learn-main {
  width: 100%;
}

.banner {
  margin-bottom: 20rpx;
  width: 100%;
  height: 230rpx;
}

.entry {
  padding: 0 24rpx;
}

.entry .entry-item {

  margin-top: 30rpx;
  padding: 12rpx;
  display: flex;
  align-items: center;
  width: 100%;
  height: 176rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx 0 rgba(204,204,204,0.40);
  border-radius: 20rpx;
}

.entry .nav-icon {
  margin-right: 20rpx;
  width: 128rpx;
  height: 128rpx;
}


.entry .content {
  flex: 1;
}

.entry .content .title {
  line-height: 1;
  font-weight: 500;
  padding: 20rpx 0 10rpx 0;
  color: #333333;
  font-size: 32rpx;
}


.entry .content .desc {
  line-height: 1;
  padding: 10rpx 0 20rpx 0;
  color: #666;
  font-size: 24rpx;
}

.entry .btn {
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #FFDC5E;
  color: #333333;
  text-align: center;
  font-size: 28rpx;
  border-radius: 31rpx;
}

page {
    position: relative;
    height: 100%;
    width: 100%;
    background: #f0eff5;
}

.title {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
    color: #fff;
    font-size: 28rpx;
    height: 60rpx;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
}

.title-notice {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.title-content {
    position: relative;
    width: calc(100% - 30rpx);
    height: 60rpx;
    overflow: hidden;
}

.animation {
    position: absolute;
    top: 0;
    left: 100%;
    /* width: 100%; */
    height: 60rpx;
    line-height: 60rpx;
    overflow-x: scroll;
    animation: animation 10s linear infinite;
}

@keyframes animation {
    0% {
        left: 100%;
    }
    100% {
        left: -100%;
    }
}

.wrap {
    position: relative;
    width: 100%;
    padding: 30rpx 26rpx 120rpx;
    height: calc(100% - 100rpx);
    box-sizing: border-box;
    overflow-y: scroll;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    background-color: #FFF;
}

.wrap .image-main {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.image-item {
    position: relative;
    width: calc( (100% - 18rpx) /  2);
    background: #fff;
    border: 2rpx solid #FFDC5E;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.upload-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 2rpx dashed #ccc;
}

.upload-btn image {
    width: 132rpx;
    height: 132rpx;
}

.upload-btn .text {
    margin-top: 60rpx;
    font-size: 28rpx;
    color: #999999;
}


.delete {
    position: absolute;
    top: 0;
    right: 0;
    height: 50rpx;
    z-index: 1000;
}

.delete {
    width: 50rpx;
}

.moreEdit {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rpx 14rpx;
    border-radius: 4rpx;
    background: #FFDC5E;
    color: #333;
    font-size: 20rpx;
}

.mainImage {
    position: relative;
}

.smallTag {
    position: absolute;
    bottom: 20rpx;
    left: 0;
    width: 100%;
    color: #fff;
    font-size: 22rpx;
    display: flex;
    justify-content: center;
}

.smallTag view {
    display: flex;
    align-items: center;
    padding: 4rpx 10rpx 4rpx 8rpx;
    border-radius: 25rpx;
    background: rgba(0, 0, 0, 0.7);
}

.smallTag image {
    width: 25rpx;
    margin-right: 8rpx;
}

.photo {
    width: 100%;
}

.count {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 60rpx;
    padding:0 20rpx;
    box-sizing: border-box;
}

.count>view {
    display: flex;
    justify-content: center;
    align-items: center;
}

.count-num {
    width: 48rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #333;
    font-size: 20rpx;
    text-align: center;
    background: #f5f5f5;
    margin: 0 4rpx;
    padding-left: 6rpx;
    padding-right: 6rpx;
    border-radius: 5rpx;
}

.count-button {
    height: 40rpx;
    width: 40rpx;
    padding: 6rpx;
}


/* 提示上传 start*/

.empty-image {
    width: 100%;
    margin: 238rpx 0 30rpx 0;
    text-align: center;
}

.empty-image>.upload-m-icon {
    width: 396rpx;
    margin: 0 auto;
}

.empty-image> .use-handbook {
    width: 620rpx;
    margin: 0 auto;
}

.empty-image>view {
    color: #666;
    font-size: 32rpx;
    margin: 30rpx auto 120rpx;
}

.tips {
    position: absolute;
    left: 30rpx;
    bottom: 50rpx;
}

.tips>image {
    width: 300rpx;
}


/* 提示上传 end*/

.bottom {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    background: #fff;
    /* padding-left: 35rpx; */
    display: flex;
    align-items: center;
    /* justify-content: space-between; */
    box-sizing: border-box;
    z-index: 400;
}

.bottom-left {
    color: #666;
    font-size: 36rpx;
    width: 50%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-right: 2rpx solid #fff;
    box-sizing: border-box;
}

.bottom-right {
    width: 50%;
    color: #999;
    font-size: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.bottom-count {
    position: absolute;
    left: 0;
    bottom: 100rpx;
    width: 100%;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    font-size: 24rpx;
    padding: 6rpx 0;
    text-align: center;
}

.bottom form {
    width: 100%;
}

.bottom button {
    width: 100%;
    padding: 0;
    line-height: 100rpx;
    border-radius: 0;
    background: #FFDC5E;
    font-size: 36rpx;
}

.button-gray {
    color: #A5A5A5;
    background: #EAEAEA!important;
    border-left: 2rpx solid #fff;
}

.progress {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: row-reverse;
    justify-content: center;
    align-items: center;
    padding-bottom: 60rpx;
    box-sizing: border-box;
    z-index: 1000;
}

.progress-content {
    position: relative;
    padding: 100rpx 80rpx;
    background: #fff;
    border-radius: 10rpx;
    color: #676767;
    font-size: 32rpx;
}

.cancel-upload {
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    color: #999;
    font-size: 28rpx;
    /* background: #2086EE; */
    line-height: 50rpx;
    padding: 0 16rpx;
    border-radius: 4rpx;
}

.progress-count {
    text-align: center;
    color: #333;
    font-size: 36rpx;
    margin-bottom: 30rpx;
}

.progress-bar {
    margin-top: 30rpx;
    border-radius: 12rpx;
}

.progress-loading {
    margin: 30rpx auto 0 auto;
    width: 80rpx;
    height: 80rpx;
    display: block;
}

.showInterceptModal {
    background: rgba(0, 0, 0, 0.75);
    padding: 20rpx;
    border-radius: 10rpx;
    margin: 0 40rpx;
    font-size: 26rpx;
    color: #fff;
    box-sizing: border-box;
}


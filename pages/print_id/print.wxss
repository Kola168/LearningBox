/* pages/print_id/print.wxss */
/* @import 'smart_preview.wxss' */

page {
    width: 100%;
    height: 100%;
    border-top: 2rpx solid rgba(0, 0, 0, 0.25);
    box-sizing: border-box;
    padding: 0 24rpx;

}


.has-pay {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    margin:30rpx 0;
    color: #333333;
    letter-spacing: 0;
    line-height: 56rpx;
}

.after-preview{
    width:75%;
    margin-left:12.5%;
    box-shadow: 0 4rpx 16rpx 0 rgba(204,204,204,0.50);
}


.wrap-price {
    width: 100%;
    margin-top: 54rpx;
    box-sizing: border-box;
}

.number {
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #333333;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.count>text {
    margin: 0 10rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #666666;
    letter-spacing: -1.22rpx;
    text-align: center;
    margin: 0 26rpx;
}

.btn-c {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    vertical-align: middle;
}

.tips {
    width: 100%;
    display: flex;
    align-items: center;
    color: red;
    font-size: 24rpx;
    margin: 40rpx 0 130rp;
}

.tips-1 {
    border: 2rpx solid red;
    margin-right: 10rpx;
}

.bottom {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    background: #FFFFFF;
    box-sizing: border-box;
    font-size: 32rpx;
}

.bottom view{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: center;
    background: #FFE27A;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #454545;
    letter-spacing: 0;
    text-align: center;
}
/* pages/print_id/print.wxss */
/* @import 'smart_preview.wxss' */

page {
    width: 100%;
    height: 100%;
    border-top: 2rpx solid rgba(0, 0, 0, 0.25);
    box-sizing: border-box;
    padding: 0 24rpx;

}


.after-preview {
    width: 75%;
    margin-left: 12.5%;
    margin-top:30rpx;
    box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.50);
}


.wrap-price {
    width: 100%;
    margin-top: 54rpx;
    box-sizing: border-box;
}

.number {
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #333333;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content:center;
}
.count{
    margin-left:20rpx;
}
.count>text {
    margin: 0 10rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #666666;
    letter-spacing: -1.22rpx;
    text-align: center;
    margin: 0 26rpx;
}

.btn-c {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    vertical-align: middle;
}

.bottom {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    background: #FFFFFF;
    box-sizing: border-box;
    font-size: 32rpx;
}

.bottom-phone {
    position: absolute;
    width: 100%;
    height: 100%;
    background: transparent;
}
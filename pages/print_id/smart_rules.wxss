/* pages/idprint/rules.wxss */
page {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  border-top: 2rpx solid rgba(0, 0, 0, 0.25);
  position: relative;
  display: flex;
  flex-direction: column;

}

.wrap {
  width: 100%;
  height: 100%;
  color: #000;
  position: relative;
  box-sizing: border-box;
  flex: 1;
}

.rule {
  width: 100%;
  margin: 0 auto;
  border: 2rpx solid #f1eded;
}

.rule .title {
  font-size: 40rpx;
  padding: 30rpx 16rpx;
  color: #64c8fa;
}

.title image {
  width: 50rpx;
  height: 50rpx;
  padding-right: 16rpx;
}

.content {
  padding: 20rpx;
  color: #c9c9c9;
}

.content>view {
  margin-bottom: 20rpx;
}

.bottom {
  width: 100%;
  height: 8%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #FFE27A;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #454545;
  letter-spacing: -0.82rpx;
  text-align: center;
}

.blue,
.white,
.red,
.darkblue {
  width: 20rpx;
  height: 20rpx;
  border: 1px solid #c9c9c9;
  border-radius: 50%;
  margin-right: 10rpx;
}

.blue {
  background: linear-gradient(rgba(122, 192, 239, 1), rgba(122, 192, 239, 0.4));
}

.example {
  width: 50%;
  margin: 0 auto;
  text-align: center;
  /* padding: 60rpx; */
}

.title {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
  padding: 64rpx 0;
}

.image image {
  width: 100%;
  border: 2rpx solid #D0CDCB;
  box-sizing: border-box;
}

.icon {
  width: 36rpx;
  margin-right: 20rpx;
}

.fail-wrap {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
}

.fail {
  width: 80%;
  padding: 40rpx 30rpx;
  border: 2rpx solid #f4f4f4;
  box-sizing: border-box;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 1px 5px #e9e9e9;
}

.fail image {
  width: 100%;
}

.fail .mg-t-20 {
  font-size: 36rpx;
}

.reChoose {
  width: 80%;
  margin: 60rpx auto 0 auto;
  border: 2rpx solid #FFE27A;
  border-radius: 6rpx;
  color: #FFE27A;
  font-size: 36rpx;
  line-height: 80rpx;
  height: 80rpx;
}

.flex-middle {
  display: flex;
  display: -webkit-flex;
  align-items: center;
}

.flex-center {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}

.mg-t-60 {
  margin-top: 60rpx;
}

.mg-t-20 {
  margin-top: 20rpx;
}

.fs-32 {
  font-size: 32rpx;
}
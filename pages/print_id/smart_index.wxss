/* pages/search/search.wxss */

page {
  color: #000;
  border-top: 2rpx solid rgba(0, 0, 0, 0.25);
}

.wrap {
  width: 100%;
  height: 100%;
}

.complex-header {
  padding: 20rpx 0;
  width: 94%;
  margin: 0 auto;
}

.header-left,
.header-right {
  height: 60rpx;
}

.header-left {
  background: #EAEAEA;
  width: 82%;
  padding: 0 10rpx;
  font-size: 28rpx;
  border-radius: 42rpx;
  position: relative;
}

.header-left image {
  width: 29.2rpx;
  height: 29.2rpx;
  margin: 0 14.4rpx 0 26.4rpx;
}

.complex-header input {
  width: 80%;
  height: 100%;
}

.holder {
  font-family: PingFangSÃŽC-Regular;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: -0.68px;
}

.complex-header .close {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  right: 28.4rpx;
  top: 13rpx;
  border-radius: 50%;
  margin: 0
}

.header-right {
  width: 18%;
  /* margin-left: 20rpx; */
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #FFC35B;
  letter-spacing: -0.86px;
}

.labels {
  padding: 28rpx 24rpx;
}

.label {
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  margin: 20rpx 30rpx 0 0;
  padding: 0 26rpx;
  border-radius: 42rpx;
  background: #EAEAEA;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: -0.58rpx;
}

.hot {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: -0.86px;
  margin-bottom: 6rpx;
}

.result {
  width: 100%;
}

.item {
  width: 100%;
  padding: 38rpx 24rpx;
  margin-bottom: 2rpx;
  box-sizing: border-box;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: -0.78rpx;
}

.size {
  margin-top: 12rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: -0.58rpx;
}

.line {
  width: 100%;
  height: 3rpx;
  background-color: #f1eded;
}

.flex-center {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}
.flex-middle {
  display: flex;
  display: -webkit-flex;
  align-items: center;
}

.fs-28 {
  font-size: 28rpx;
}

.fs-32 {
  font-size: 32rpx;
}

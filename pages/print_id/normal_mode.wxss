page{
    width:100%;
    height:100%;
    position: relative;
    /* box-shadow:inset 0 4rpx 2rpx -2rpx rgba(0,0,0,0.25) */
}

.modes {
    width: 100%;
    position: relative;
    z-index: 500;
    padding-top: 50rpx;
    padding-bottom: 60rpx;
    text-align: center;
}

.mode {
    width: 80%;
    display: inline-block;
    text-align: center;
    margin: 0 auto;
    box-shadow: 0 0 34rpx rgba(177, 176, 181, 0.8);
}

.mode image {
    width: 90%;
    text-align: center;
    margin: 0 auto;
    display: block;
    border: 6rpx solid rgba(255, 255, 255, 0);
}

.gfd-setting{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
}

.gfd-setting .name{
    margin-right: 20rpx;
}

.mode-name{
    display: flex;
    align-items: center;
}

.mode-name>text{
    margin:0 10rpx;
    color:#000;
}

.btn-c {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    vertical-align: middle;
}

.bottom{
    position: fixed;
    bottom: 0;
    z-index: 800;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    width:100%;
    font-size: 30rpx;
}

.bottom form{
    width:100%;
}

.btn-print {
    width:100%!important;
    background: #FFE27A;
    color:#000;
    border: none;
    height:100rpx;
    padding:0 60rpx; 
    line-height: 100rpx;
    margin:none;
    border-radius: 0;
    font-size: 34rpx;
}


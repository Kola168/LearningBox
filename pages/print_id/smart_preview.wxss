.download_tip {
    position: absolute;
    bottom: 240rpx;
    left: 34rpx;
    width: calc(100% - 68rpx);
    height: 100rpx;
}

.flex-middle {
    display: flex;
    display: -webkit-flex;
    align-items: center;
}

.flex-center {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: center;
}

.mg-t-60 {
    margin-top: 60rpx;
}

.mg-t-20 {
    margin-top: 20rpx;
}

.fs-32 {
    font-size: 32rpx;
}

.conf-button {
    width: 50%;
    position: relative;
}

.bottom-button-box {
    width: 100%;
    height: 100%;
    position: absolute;
    opacity: 0;
    top: 0;
    left: 0;
    overflow: hidden;
}

.tips {
    width: 100%;
    display: flex;
    align-items: center;
    color: red;
    font-size: 24rpx;
    margin: 30rpx 0;
}

.tips.after-pay{
    margin: 60rpx 0; 
}

.tips-1 {
    border: 2rpx solid red;
    margin-right: 10rpx;
}

.save-tip {
    position: absolute;
    bottom: 100rpx;
    left: 24rpx;
    width: 55%;
}

.pay-title {
    display: flex;
    margin-bottom: 60rpx;
}

.pay-title image {
    margin-right: 24rpx;
}

.pay-info {
    position: relative;
    margin-top: 30rpx;
    display: flex;
    height: 200rpx;
    flex-direction: column;
}

.pay-info image {
    width: 200rpx;
    height: 200rpx;
}

.pay-info {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #333333;
    letter-spacing: -0.68rpx;
}

.pay-info .size {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 0;
}

.pay-info .price {
    position: absolute;
    bottom: 6rpx;
    right: 0;
    font-family: PingFangSC-Medium;
    font-size: 40rpx;
    color: #FB5130;
    letter-spacing: 0;
    text-align: center;
}

.pay-way {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333333;
    letter-spacing: 0;
}

.pay-way view {
    display: flex;
    align-items: center;
}

.pay-way .pay-image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.pay-way .free-image {
    width: 256rpx;
    height: 50rpx;
}

.pay-way.member {
    margin-top: 44rpx;
}

.has-pay {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    margin:30rpx 0;
    color: #333333;
    letter-spacing: 0;
    line-height: 56rpx;
}

.after-preview{
    width:75%;
    margin-left:12.5%;
    box-shadow: 0 4rpx 16rpx 0 rgba(204,204,204,0.50);
}
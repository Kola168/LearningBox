/* pages/idprint/preview.wxss */

page {
    width: 100%;
    height: 100%;
    border-top: 2rpx solid rgba(0, 0, 0, 0.25);
    box-sizing: border-box;
    padding: 0 24rpx;

}

.image,
.print {
    width: 100%;
    /* flex-direction: column; */
    /* align-items: center; */
    position: relative;
    /* display: flex; */
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: center;
    line-height: 36rpx;
    margin-bottom: 250rpx;
}

.print_wm_url {
    margin-top: 60rpx;
}

.singleImg>view,
.print_wm_url>view {
    text-align: left;
    margin-bottom: 30rpx;
}

.singleImg>image,
.print_wm_url>image {
    display: block;
    width: 60%;
    padding: 26rpx 22rpx;
    border: 2rpx solid #FFE27A;
    box-sizing: border-box;
    margin: 0 auto
}

.print_wm_url>image {
    width: 75%;
    box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.50);
    border: none;
}

.bottom {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    background: #FFFFFF;
    border: 2rpx solid #CECECE;
    box-sizing: border-box;
}

.bottom.pay {
    bottom: 80rpx;
    width: calc(100% - 48rpx);
    left: 24rpx;
    border-radius: 60rpx;
    border: none
}

.bottom .pay {
    border-radius: 60rpx;
}


.image text {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: center;
    line-height: 56rpx;
    margin-top: 24rpx;
}

.left {
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #666666;
}

.right {
    background: #FFE27A;
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: center;
}

.forbid {
    background: #c9c9c9;
}

.bottom .width {
    width: 100%;
}

.btn-c {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    vertical-align: middle;
}

.wrap-price {
    width: 100%;
    margin-top: 54rpx;
    padding: 0 24rpx 30rpx;
    box-sizing: border-box;
}

.number {
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #333333;
    letter-spacing: -2.38rpx;
    width: 100%;
}

.number {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.specials {
    width: 146rpx;
    margin-right: 20rpx;
}

.after {
    position: relative;
    color: #FF6143;
}


.member_tip {
    position: absolute;
    top: -30rpx;
    left: -308rpx;
    width: 300rpx;
    height: 60rpx;
}

.count>text {
    margin: 0 10rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #666666;
    letter-spacing: -1.22rpx;
    text-align: center;
    margin: 0 26rpx;
}

.line {
    width: 100%;
    height: 2rpx;
    padding: 0 6rpx;
    height: 2rpx;
    box-sizing: border-box;
    background: #CECECE;
    margin-top: 32rpx;
    margin-bottom: 32rpx;
}


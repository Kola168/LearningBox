/* pages/package_member/member/detail.wxss */
page {
    padding: 60rpx 24rpx;
    width: 100%;
    box-sizing: border-box;
}

.back-image {
    width: 100%;
    height: 300rpx;
    position: relative;
}

.back {
    margin-top: 40rpx;
}

.content {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    padding: 106rpx 30rpx 30rpx;
    box-sizing: border-box;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333333;
    letter-spacing: 0;
}

.button {
    position: absolute;
    bottom: 30rpx;
    right: 0;
    display: flex;
}

.update {
    background: #F94666;
    border-radius: 26rpx;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    padding: 8rpx 20rpx;
    margin-right: 30rpx;
}

.update.xueke {
    background: #FFDC5E;
    color: #333;
}

.bottom-tip {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    letter-spacing: 0;
    margin-top: 60rpx
}
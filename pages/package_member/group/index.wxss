page {
    width: 100%;
    height: 100%;
    padding: 24rpx;
    box-sizing: border-box;
    position: relative;
}

.top-wrap {
    position: relative;
}

.top-image {
    width: calc(100% + 48rpx);
    margin-left: -24rpx;
    height: 200rpx;
}

.user-info {
    position: absolute;
    bottom: -82rpx;
    left: 0;
    height: 180rpx;
    width: 100%;
    background: #FFFFFF;
    box-shadow: 0 4rpx 16rpx 0 rgba(204, 204, 204, 0.40);
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: -0.62px;
}

.user-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.member-avatar {
    border-radius: 50%;
    width: 92rpx;
    height: 92rpx;
    margin: 0;
}

.grade {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    letter-spacing: -0.42rpx;
}

.member-title {
    margin-top: 146rpx;
    margin-bottom: 46rpx;
    display: flex;
    align-items: center;
}

.member-title view:first-child {
    background: #FFDC5E;
    width: 6rpx;
    height: 28rpx;
}

.member-title view:nth-child(2) {
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #454545;
    letter-spacing: -0.86px;
    margin-left: 8rpx;
    margin-right: 12rpx;
}

.member-title view:nth-child(3) {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
    letter-spacing: 0;
}

.member-wrap {
    display: flex;
    flex-wrap: wrap;
}

.member-item {
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    position: relative;
    overflow: visible;
    margin-bottom: 40rpx;
}

.member-name {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #333333;
    letter-spacing: -0.58px;
    text-align: center;
    margin-top: 12rpx;
}

.member-avatar-tip {
    position: absolute;
    width: 72rpx;
    height: 28rpx;
    top: 68rpx;
    left: calc((100% - 72rpx)/2);
}

.tip-bottom {
    padding: 24rpx;
    box-sizing: border-box;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    letter-spacing: -0.58px;
    position: absolute;
    left: 0;
    bottom: 80rpx;
}

.member-avatar-delete {
    position: absolute;
    width: 28rpx;
    height: 28rpx;
    top: -6rpx;
    right: calc((100% - 72rpx)/2 - 16rpx);
}

button {
    line-height: inherit;
}

.exit {
    background: #FFDC5E;
    border-radius: 49rpx;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: center;
    height: 98rpx;
    line-height: 98rpx;
    width: 80%;
    position: absolute;
    left: 10%;
    bottom: 220rpx;
}

.join-tip-title {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: -0.86rpx;
    margin: 146rpx auto 40rpx;
    text-align: center;
}

.join-tip-content {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #666;
    letter-spacing: -0.68rpx;
    margin-bottom: 18rpx;
}
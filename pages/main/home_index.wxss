/**index.wxss**/
page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 24rpx;
}

.swiper {
  width: 100%;
  height: 220rpx;
  box-sizing: border-box;
  padding-bottom: 26rpx;
}

swiper-item {
  border-radius: 16rpx;
}

.swiper image {
  width: 100%;
  height: 220rpx;
  border-radius: 16rpx;
}

.print-nomal {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-bottom: 12rpx;
}

.print-nomal image {
  position: relative;
  width: calc((100% - 20rpx)/3);
  height: 200rpx;
}

.print-nomal view {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 26rpx;
  left: 28rpx;
  color: #fff;
  font-size: 34rpx;
  font-family: PingFangSC-Regular;
}

.home-title {
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #454545;
  letter-spacing: 0;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.home-title>view>text {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0;
  text-align: center;
  margin-right: 10rpx;
}

.home-title>view {
  display: flex;
  align-items: center;
}

.home-title>view>image {
  width: 24rpx;
  height: 24rpx;
}

.tool-wrap {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.tool-item {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333333;
  letter-spacing: 0.62rpx;
  text-align: center;
  width: 20%;
  margin-bottom: 50rpx;
}

.tool-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 14rpx;
}

.study-plan {
  width: 100%;
  height: 180rpx;
  box-shadow: 0 2px 20rpx 0 rgba(204, 204, 204, 0.37);
  border-radius: 20rpx;
  margin-top: 70rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: space-between;
}

.study-plan-image {
  width: 180rpx;
  height: 180rpx;
  background: #ededed;
  box-shadow: 0 -4rpx 20rpx 0 rgba(204, 204, 204, 0.34);
  margin-top: -30rpx;
  margin-left: 30rpx;
  border-radius: 16rpx;
}

.study-plan>view {
  width: calc(100% - 250rpx);
  height: 100%;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}

.study-plan view:nth-child(1) {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  letter-spacing: 0;
}

.add-plan {
  display: flex;
  justify-content: flex-end;
  margin-top: 26rpx;
  margin-right: 30rpx;
}

.add-plan view {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  background: #FFDC5E;
  border-radius: 30rpx;
  padding: 6rpx 24rpx;
  display: inline-block;
}

.content-list {
  width: 100%;
}

.content-image {
  width: 100%;
  height: 320rpx;
  margin-bottom: 50rpx;
}

.tips {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: SourceHanSansCN-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  margin-bottom:76rpx;
}

.tips>view {
  width:336rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FFF3DD;
  border-radius:18rpx;
  box-sizing: border-box;
}

.tips image {
  width: 36rpx;
  height: 30rpx;
  margin-right:10rpx;
  margin-left:10rpx;
}

.auth-button{
  position: fixed;
  left:0;
  bottom:0;
  width:100%!important;
  height:100%;
}
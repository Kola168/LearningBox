.confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.confirm-modal-wrap {
  width: 80%;
  background: #fff;
  color: #333;
  border-radius: 10rpx;
  overflow: hidden;
}

.confirm-modal-title {
  font-size: 36rpx;
  padding: 60rpx 0 36rpx;
  text-align: center;
  font-weight: bold;
}

.confirm-modal-wrap image {
  width: 80%;
  margin-left: 10%;
  margin-bottom: 10rpx;
}

.content-box {
  padding: 0 30rpx 36rpx;
}

.box-text {
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.box-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-top: 24rpx;
}

.box-tip view {
  margin-right: 10rpx;
}

.button {
  width: 100%;
  display: flex;
}

.button view {
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
  color: #454545;
  background: #FFDC5E;
  font-size: 36rpx;
  text-align: center;
}

.button .cancel {
  color: #333;
  background: #fff;
  border-top: 2rpx solid #CECECE;
  box-sizing: border-box;
}

.button .confirm {
  width: 100%;
}
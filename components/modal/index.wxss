.confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.confirm-modal-wrap {
  width: 82.5%;
  background: #fff;
  color: #333;
  border-radius: 20rpx;
  overflow: hidden;
}

.confirm-modal-title {
  font-size: 36rpx;
  padding: 60rpx 40rpx 0;
  text-align: center;
  font-weight: bold;
}

.confirm-modal-wrap image {
  width: 80%;
  margin-left: 10%;
  margin-bottom: 10rpx;
}

.confirm-modal-content {
  padding: 36rpx 30rpx 36rpx;
}

.confirm-modal-content__text {
  font-size: 28rpx;
  margin-bottom: 18rpx;
}

.confirm-modal-button {
  width: 100%;
  display: flex;
}

.confirm-modal-button view {
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
  color: #454545;
  background: #FFDC5E;
  font-size: 36rpx;
  text-align: center;
}

.confirm-modal-button .confirm-modal-button__cancel {
  color: #666;
  background: #fff;
  border-top: 2rpx solid #CECECE;
  box-sizing: border-box;
}

.confirm-modal-button .confirm-modal-button__confirm {
  width: 100%;
}
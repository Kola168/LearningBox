/* 耗材推荐 start */

.consumables-bg1 {
  width: 702rpx;
  height: 670rpx;
  background: #fff;
  position: relative;
  border-radius: 40rpx;
  overflow: hidden;
}

.consumables-bg2 {
  width: 702rpx;
  height: 1060rpx;
  background: #fff;
  position: relative;
  border-radius: 25rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  /* padding-top: 220rpx; */
  z-index: 100000;
  align-items: center;
}

.mask2 {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding-top: 20rpx; */
  z-index: 100000;
}

.consumables-top-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.consumables-close {
  position: absolute;
  top: 0;
  right: 0;
  width: 70rpx;
}

.content1 {
  position: absolute;
  top: 208rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  font-size: 28rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 20rpx;
}

.content2 {
  position: absolute;
  top: 208rpx;
  display: flex;
  flex-wrap: wrap;
  font-size: 28rpx;
  box-sizing: border-box;
  width: 100%;
  margin-left: 28rpx;
}

.type {
  width: 300rpx;
  /* height: 390rpx; */
  border-radius: 12rpx;
  text-align: center;
  background: #fff;
  margin-bottom: 20rpx;
  border: 2rpx solid #ececec;
}

.border {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 10rpx;
}

.consumables_image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 12rpx 12rpx 0 0;
}


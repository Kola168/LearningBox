.nav-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 9999;
}

.bar-left-inner,
.bar-search,
.nav-bar,
.bar-left {
  display: flex;
  align-items: center;
}

.nav-bar {
  justify-content: space-between;
}

.bar-search {
  background: #f2f2f2;
  color: #ccc;
  font-size: 24rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin: 0 14rpx 0 16rpx;
}

.bar-left-inner {
  padding: 0 16rpx;
  border: 2rpx solid #ccc;
  background: rgba(255, 255, 255, .6);
}

.split-line {
  margin: 0 12rpx;
  color: #ccc;
}

.bar-title {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.bar-left image {
  width: 44rpx;
  height: 44rpx;
}

.bar-right {
  height: 100%;
}
/* pages/gallery/component/multiphoto/index.wxss */
page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

image {
    display: block;
}

.mode-box-size {
    position: relative;
    flex-shrink:0;
}

.mode-cover {
    width: 100%;
    display: inline-block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9;
}

.img-area {
    position: absolute;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
}

.addimg {
    width: 50%;
    height: 50%;
}

.border-cover{
    position: absolute;
    overflow: hidden;
    z-index: 90;
    box-sizing:border-box;
}

.img-area-cover {
    position: absolute;
    overflow: hidden;
    z-index: 99;
    display:flex;
    justify-content:center;
    align-items:center;
}

.add-icon{
  width:160rpx;
}

.delete-icon{
  width:20px;
  position:absolute;
  z-index:110;
}
